@model LifeHub.Models.ViewModels.AdminDashboardViewModel
@{
    ViewData["Title"] = "Dashboard Admin";
}

<div class="admin-dashboard">
    <!-- Header -->
    <div class="dashboard-header">
        <div class="header-content">
            <div class="header-text">
                <h1 class="dashboard-title">
                    <i class="fas fa-tachometer-alt me-3"></i>Panel de Administración
                </h1>
                <p class="dashboard-subtitle">Resumen general y métricas de LifeHub</p>
            </div>
            <div class="header-actions">
                <div class="action-buttons">
                    <a href="@Url.Action("Users")" class="btn-action">
                        <i class="fas fa-users me-2"></i>
                        Gestión de Usuarios
                    </a>
                    <a href="@Url.Action("Stats")" class="btn-action">
                        <i class="fas fa-chart-bar me-2"></i>
                        Estadísticas
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Alertas -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert-card success">
            <div class="alert-content">
                <i class="fas fa-check-circle alert-icon"></i>
                <div class="alert-text">
                    <h4>¡Éxito!</h4>
                    <p>@TempData["SuccessMessage"]</p>
                </div>
            </div>
            <button class="alert-close" onclick="this.parentElement.style.display='none'">
                <i class="fas fa-times"></i>
            </button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert-card error">
            <div class="alert-content">
                <i class="fas fa-exclamation-circle alert-icon"></i>
                <div class="alert-text">
                    <h4>Error</h4>
                    <p>@TempData["ErrorMessage"]</p>
                </div>
            </div>
            <button class="alert-close" onclick="this.parentElement.style.display='none'">
                <i class="fas fa-times"></i>
            </button>
        </div>
    }

    <!-- Métricas Principales -->
    <div class="metrics-grid">
        <!-- Tarjeta de Usuarios -->
        <div class="metric-card primary">
            <div class="metric-icon">
                <i class="fas fa-users"></i>
            </div>
            <div class="metric-content">
                <h3 class="metric-value">@Model.TotalUsers</h3>
                <p class="metric-label">Total Usuarios</p>
                <div class="metric-trend">
                    <i class="fas fa-arrow-up trend-up"></i>
                    <span>@Model.NewUsersToday nuevos hoy</span>
                </div>
            </div>
        </div>

        <!-- Tarjeta de Activos -->
        <div class="metric-card success">
            <div class="metric-icon">
                <i class="fas fa-user-check"></i>
            </div>
            <div class="metric-content">
                <h3 class="metric-value">@Model.ActiveUsers</h3>
                <p class="metric-label">Usuarios Activos</p>
                <div class="metric-progress">
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: @((Model.ActiveUsers * 100) / Math.Max(Model.TotalUsers, 1))%"></div>
                    </div>
                    <span>@((Model.ActiveUsers * 100) / Math.Max(Model.TotalUsers, 1))%</span>
                </div>
            </div>
        </div>

        <!-- Tarjeta de Baneados -->
        <div class="metric-card danger">
            <div class="metric-icon">
                <i class="fas fa-user-slash"></i>
            </div>
            <div class="metric-content">
                <h3 class="metric-value">@Model.BannedUsers</h3>
                <p class="metric-label">Usuarios Baneados</p>
                <div class="metric-trend">
                    <i class="fas fa-shield-alt"></i>
                    <span>@Model.BannedUsers en moderación</span>
                </div>
            </div>
        </div>

        <!-- Tarjeta de Ingresos -->
        <div class="metric-card accent">
            <div class="metric-icon">
                <i class="fas fa-dollar-sign"></i>
            </div>
            <div class="metric-content">
                <h3 class="metric-value">$@Model.MonthlyRevenue.ToString("N2")</h3>
                <p class="metric-label">Ingresos Mensuales</p>
                <div class="metric-trend">
                    <i class="fas fa-chart-line trend-up"></i>
                    <span>Ingresos recurrentes</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Segunda Fila de Métricas -->
    <div class="metrics-grid">
        <!-- Tarjeta de Hábitos -->
        <div class="metric-card warning">
            <div class="metric-icon">
                <i class="fas fa-tasks"></i>
            </div>
            <div class="metric-content">
                <h3 class="metric-value">@Model.TotalHabits</h3>
                <p class="metric-label">Total Hábitos</p>
                <div class="metric-detail">
                    <span class="detail-item">
                        <i class="fas fa-running"></i>
                        @Model.ActiveHabits activos
                    </span>
                </div>
            </div>
        </div>

        <!-- Tarjeta de Transacciones -->
        <div class="metric-card info">
            <div class="metric-icon">
                <i class="fas fa-exchange-alt"></i>
            </div>
            <div class="metric-content">
                <h3 class="metric-value">@Model.TotalTransactions</h3>
                <p class="metric-label">Transacciones</p>
                <div class="metric-trend">
                    <i class="fas fa-history"></i>
                    <span>Total registradas</span>
                </div>
            </div>
        </div>

        <!-- Tarjeta de Planes -->
        <div class="metric-card secondary">
            <div class="metric-icon">
                <i class="fas fa-crown"></i>
            </div>
            <div class="metric-content">
                <h3 class="metric-value">@Model.PlanDistribution.Count</h3>
                <p class="metric-label">Planes Activos</p>
                <div class="metric-detail">
                    <span class="detail-item">
                        <i class="fas fa-chart-pie"></i>
                        @Model.PlanDistribution.Sum(p => p.UserCount) suscriptores
                    </span>
                </div>
            </div>
        </div>

        <!-- Tarjeta de Crecimiento -->
        <div class="metric-card gradient">
            <div class="metric-icon">
                <i class="fas fa-seedling"></i>
            </div>
            <div class="metric-content">
                <h3 class="metric-value">+@Model.GrowthStats.Sum(g => g.NewUsers)</h3>
                <p class="metric-label">Crecimiento 7D</p>
                <div class="metric-trend">
                    <i class="fas fa-rocket trend-up"></i>
                    <span>Usuarios nuevos</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Gráficas y Visualizaciones -->
    <div class="charts-section">
        <div class="chart-row">
            <!-- Distribución de Planes -->
            <div class="chart-card">
                <div class="chart-header">
                    <h3 class="chart-title">
                        <i class="fas fa-chart-pie me-2"></i>
                        Distribución de Planes
                    </h3>
                    <div class="chart-actions">
                        <button class="chart-action-btn" title="Actualizar">
                            <i class="fas fa-sync-alt"></i>
                        </button>
                    </div>
                </div>
                <div class="chart-body">
                    <div class="chart-container">
                        <canvas id="planDistributionChart" width="400" height="200"></canvas>
                    </div>
                    <div class="chart-legend">
                        @foreach (var plan in Model.PlanDistribution)
                        {
                            <div class="legend-item">
                                <div class="legend-color" style="background-color: @plan.Color"></div>
                                <span class="legend-label">@plan.PlanName</span>
                                <span class="legend-value">@plan.UserCount</span>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Crecimiento Reciente -->
            <div class="chart-card">
                <div class="chart-header">
                    <h3 class="chart-title">
                        <i class="fas fa-chart-line me-2"></i>
                        Crecimiento de la Plataforma
                    </h3>
                    <div class="chart-actions">
                        <button class="chart-action-btn" title="Configurar">
                            <i class="fas fa-cog"></i>
                        </button>
                    </div>
                </div>
                <div class="chart-body">
                    <div class="chart-container">
                        <canvas id="growthChart" width="400" height="200"></canvas>
                    </div>
                    <div class="chart-legend">
                        <div class="legend-item">
                            <div class="legend-color" style="background-color: #3B82F6"></div>
                            <span class="legend-label">Nuevos Usuarios</span>
                        </div>
                        <div class="legend-item">
                            <div class="legend-color" style="background-color: #10B981"></div>
                            <span class="legend-label">Nuevos Hábitos</span>
                        </div>
                        <div class="legend-item">
                            <div class="legend-color" style="background-color: #8B5CF6"></div>
                            <span class="legend-label">Nuevas Transacciones</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Acciones Rápidas -->
    <div class="actions-section">
        <div class="section-header">
            <h2 class="section-title">
                <i class="fas fa-bolt me-2"></i>
                Acciones Rápidas
            </h2>
            <p class="section-subtitle">Accesos directos a las funciones principales</p>
        </div>
        <div class="actions-grid">
            <a href="@Url.Action("Users")" class="action-card">
                <div class="action-icon users">
                    <i class="fas fa-users"></i>
                </div>
                <div class="action-content">
                    <h3>Gestión de Usuarios</h3>
                    <p>Administra usuarios, roles y permisos</p>
                </div>
                <div class="action-arrow">
                    <i class="fas fa-chevron-right"></i>
                </div>
            </a>

            <a href="@Url.Action("Stats")" class="action-card">
                <div class="action-icon stats">
                    <i class="fas fa-chart-bar"></i>
                </div>
                <div class="action-content">
                    <h3>Estadísticas Detalladas</h3>
                    <p>Métricas avanzadas y reportes</p>
                </div>
                <div class="action-arrow">
                    <i class="fas fa-chevron-right"></i>
                </div>
            </a>

            <a href="#" class="action-card">
                <div class="action-icon settings">
                    <i class="fas fa-cog"></i>
                </div>
                <div class="action-content">
                    <h3>Configuración</h3>
                    <p>Ajustes del sistema y preferencias</p>
                </div>
                <div class="action-arrow">
                    <i class="fas fa-chevron-right"></i>
                </div>
            </a>

            <a href="/" class="action-card">
                <div class="action-icon home">
                    <i class="fas fa-home"></i>
                </div>
                <div class="action-content">
                    <h3>Ir al Sitio</h3>
                    <p>Volver a la vista de usuario</p>
                </div>
                <div class="action-arrow">
                    <i class="fas fa-chevron-right"></i>
                </div>
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Gráfico de Distribución de Planes
        var planCtx = document.getElementById('planDistributionChart').getContext('2d');
        var planChart = new Chart(planCtx, {
            type: 'doughnut',
            data: {
                labels: [
                    @foreach (var plan in Model.PlanDistribution)
                    {
                        @Html.Raw($"'{plan.PlanName}',")
                    }
                ],
                datasets: [{
                    data: [
                        @foreach (var plan in Model.PlanDistribution)
                        {
                            @Html.Raw($"{plan.UserCount},")
                        }
                    ],
                    backgroundColor: [
                        @foreach (var plan in Model.PlanDistribution)
                        {
                            @Html.Raw($"'{plan.Color}',")
                        }
                    ],
                    borderWidth: 3,
                    borderColor: '#fff',
                    hoverOffset: 15
                }]
            },
            options: {
                maintainAspectRatio: false,
                cutout: '65%',
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        backgroundColor: 'rgba(0, 0, 0, 0.8)',
                        titleFont: {
                            size: 14,
                            weight: '600'
                        },
                        bodyFont: {
                            size: 13
                        },
                        padding: 12,
                        cornerRadius: 8
                    }
                }
            }
        });

        // Gráfico de Crecimiento
        var growthCtx = document.getElementById('growthChart').getContext('2d');
        var growthChart = new Chart(growthCtx, {
            type: 'line',
            data: {
                labels: [
                    @foreach (var stat in Model.GrowthStats)
                    {
                        @Html.Raw($"'{stat.Date}',")
                    }
                ],
                datasets: [
                    {
                        label: 'Nuevos Usuarios',
                        data: [
                            @foreach (var stat in Model.GrowthStats)
                            {
                                @Html.Raw($"{stat.NewUsers},")
                            }
                        ],
                        borderColor: '#3B82F6',
                        backgroundColor: 'rgba(59, 130, 246, 0.1)',
                        borderWidth: 3,
                        tension: 0.4,
                        fill: true,
                        pointBackgroundColor: '#3B82F6',
                        pointBorderColor: '#fff',
                        pointBorderWidth: 2,
                        pointRadius: 5,
                        pointHoverRadius: 7
                    },
                    {
                        label: 'Nuevos Hábitos',
                        data: [
                            @foreach (var stat in Model.GrowthStats)
                            {
                                @Html.Raw($"{stat.NewHabits},")
                            }
                        ],
                        borderColor: '#10B981',
                        backgroundColor: 'rgba(16, 185, 129, 0.1)',
                        borderWidth: 3,
                        tension: 0.4,
                        fill: true,
                        pointBackgroundColor: '#10B981',
                        pointBorderColor: '#fff',
                        pointBorderWidth: 2,
                        pointRadius: 5,
                        pointHoverRadius: 7
                    },
                    {
                        label: 'Nuevas Transacciones',
                        data: [
                            @foreach (var stat in Model.GrowthStats)
                            {
                                @Html.Raw($"{stat.NewTransactions},")
                            }
                        ],
                        borderColor: '#8B5CF6',
                        backgroundColor: 'rgba(139, 92, 246, 0.1)',
                        borderWidth: 3,
                        tension: 0.4,
                        fill: true,
                        pointBackgroundColor: '#8B5CF6',
                        pointBorderColor: '#fff',
                        pointBorderWidth: 2,
                        pointRadius: 5,
                        pointHoverRadius: 7
                    }
                ]
            },
            options: {
                maintainAspectRatio: false,
                interaction: {
                    intersect: false,
                    mode: 'index'
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: 'rgba(0, 0, 0, 0.05)'
                        },
                        ticks: {
                            precision: 0
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        }
                    }
                },
                plugins: {
                    tooltip: {
                        backgroundColor: 'rgba(0, 0, 0, 0.8)',
                        titleFont: {
                            size: 14,
                            weight: '600'
                        },
                        bodyFont: {
                            size: 13
                        },
                        padding: 12,
                        cornerRadius: 8
                    }
                }
            }
        });

        // Efectos de hover para las tarjetas de acción
        document.querySelectorAll('.action-card').forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-8px)';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });

        // Actualizar métricas en tiempo real (simulado)
        function updateMetrics() {
            // Aquí iría la lógica para actualizar métricas en tiempo real
            console.log('Actualizando métricas...');
        }

        // Actualizar cada 30 segundos
        setInterval(updateMetrics, 30000);
    </script>
}

