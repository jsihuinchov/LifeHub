@{
    ViewData["Title"] = "Estadísticas Detalladas";
    var usageStats = ViewBag.UsageStats as LifeHub.Models.ViewModels.UsageStatsViewModel;
    var growthStats = ViewBag.GrowthStats as List<LifeHub.Models.ViewModels.GrowthStatsViewModel>;
    var planDistribution = ViewBag.PlanDistribution as LifeHub.Models.ViewModels.PlanDistributionViewModel;
}

<div class="admin-stats">
    <!-- Header -->
    <div class="dashboard-header">
        <div class="header-content">
            <div class="header-text">
                <h1 class="dashboard-title">
                    <i class="fas fa-chart-bar me-3"></i>Estadísticas Detalladas
                </h1>
                <p class="dashboard-subtitle">Métricas avanzadas y análisis de la plataforma</p>
            </div>
            <div class="header-actions">
                <a href="@Url.Action("Index")" class="btn-back">
                    <i class="fas fa-arrow-left me-2"></i>
                    Volver al Dashboard
                </a>
            </div>
        </div>
    </div>

    <!-- Filtros -->
    <div class="filters-card">
        <div class="filters-header">
            <h3 class="filters-title">
                <i class="fas fa-filter me-2"></i>
                Filtros y Configuración
            </h3>
        </div>
        <div class="filters-body">
            <div class="filters-grid">
                <div class="filter-group">
                    <label for="dateRange" class="filter-label">Rango de fechas:</label>
                    <select class="filter-select" id="dateRange">
                        <option value="7">Últimos 7 días</option>
                        <option value="30" selected>Últimos 30 días</option>
                        <option value="90">Últimos 3 meses</option>
                        <option value="365">Último año</option>
                    </select>
                </div>
                <div class="filter-group">
                    <label for="metricType" class="filter-label">Tipo de métrica:</label>
                    <select class="filter-select" id="metricType">
                        <option value="all" selected>Todas las métricas</option>
                        <option value="users">Solo usuarios</option>
                        <option value="habits">Solo hábitos</option>
                        <option value="transactions">Solo transacciones</option>
                    </select>
                </div>
                <div class="filter-group">
                    <button class="filter-apply-btn" id="applyFilters">
                        <i class="fas fa-filter me-2"></i>Aplicar Filtros
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Métricas de Uso General -->
    <div class="section-header">
        <h2 class="section-title">
            <i class="fas fa-chart-pie me-2"></i>
            Estadísticas de Uso General
        </h2>
        <p class="section-subtitle">Resumen completo de la actividad en la plataforma</p>
    </div>

    <div class="usage-metrics-grid">
        <div class="usage-metric">
            <div class="usage-icon primary">
                <i class="fas fa-tasks"></i>
            </div>
            <div class="usage-content">
                <h3 class="usage-value">@usageStats.TotalHabitsCreated</h3>
                <p class="usage-label">Hábitos Creados</p>
                <div class="usage-trend">
                    <i class="fas fa-fire trend-up"></i>
                    <span>@usageStats.ActiveHabitsToday activos hoy</span>
                </div>
            </div>
        </div>

        <div class="usage-metric">
            <div class="usage-icon success">
                <i class="fas fa-exchange-alt"></i>
            </div>
            <div class="usage-content">
                <h3 class="usage-value">@usageStats.TotalTransactionsCreated</h3>
                <p class="usage-label">Transacciones</p>
                <div class="usage-trend">
                    <i class="fas fa-calendar trend-up"></i>
                    <span>@usageStats.TransactionsThisMonth este mes</span>
                </div>
            </div>
        </div>

        <div class="usage-metric">
            <div class="usage-icon info">
                <i class="fas fa-calendar-check"></i>
            </div>
            <div class="usage-content">
                <h3 class="usage-value">@usageStats.TotalAppointmentsCreated</h3>
                <p class="usage-label">Citas Médicas</p>
                <div class="usage-trend">
                    <i class="fas fa-heartbeat"></i>
                    <span>Seguimiento de salud</span>
                </div>
            </div>
        </div>

        <div class="usage-metric">
            <div class="usage-icon warning">
                <i class="fas fa-users"></i>
            </div>
            <div class="usage-content">
                <h3 class="usage-value">@usageStats.TotalCommunitiesCreated</h3>
                <p class="usage-label">Comunidades</p>
                <div class="usage-trend">
                    <i class="fas fa-comments"></i>
                    <span>Espacios colaborativos</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Gráficas Principales -->
    <div class="charts-section">
        <div class="charts-grid">
            <!-- Gráfico de Crecimiento -->
            <div class="chart-card large">
                <div class="chart-header">
                    <h3 class="chart-title">
                        <i class="fas fa-chart-line me-2"></i>
                        Crecimiento de la Plataforma
                    </h3>
                    <div class="chart-actions">
                        <button class="chart-action-btn" title="Configurar">
                            <i class="fas fa-cog"></i>
                        </button>
                    </div>
                </div>
                <div class="chart-body">
                    <div class="chart-container">
                        <canvas id="growthChart" width="400" height="200"></canvas>
                    </div>
                </div>
            </div>

            <!-- Distribución de Planes -->
            <div class="chart-card">
                <div class="chart-header">
                    <h3 class="chart-title">
                        <i class="fas fa-chart-pie me-2"></i>
                        Distribución de Planes
                    </h3>
                    <div class="chart-actions">
                        <button class="chart-action-btn" title="Actualizar">
                            <i class="fas fa-sync-alt"></i>
                        </button>
                    </div>
                </div>
                <div class="chart-body">
                    <div class="chart-container">
                        <canvas id="planDistributionChart" width="400" height="200"></canvas>
                    </div>
                    <div class="chart-legend">
                        @foreach (var plan in planDistribution.Distribution)
                        {
                            <div class="legend-item">
                                <div class="legend-color" style="background-color: @plan.Color"></div>
                                <span class="legend-label">@plan.PlanName</span>
                                <span class="legend-value">@plan.UserCount (@plan.Percentage.ToString("N1")%)</span>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabla de Crecimiento Detallado -->
    <div class="table-section">
        <div class="section-header">
            <h2 class="section-title">
                <i class="fas fa-table me-2"></i>
                Detalle de Crecimiento Diario
            </h2>
            <p class="section-subtitle">Análisis detallado de la actividad diaria</p>
        </div>
        
        <div class="table-card">
            <div class="table-container">
                <table class="data-table" id="growthTable">
                    <thead>
                        <tr>
                            <th>Fecha</th>
                            <th>Nuevos Usuarios</th>
                            <th>Nuevos Hábitos</th>
                            <th>Nuevas Transacciones</th>
                            <th>Total Diario</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var stat in growthStats)
                        {
                            <tr>
                                <td class="date-cell">@stat.Date</td>
                                <td>
                                    <div class="metric-badge primary">
                                        <i class="fas fa-user-plus me-1"></i>
                                        @stat.NewUsers
                                    </div>
                                </td>
                                <td>
                                    <div class="metric-badge success">
                                        <i class="fas fa-tasks me-1"></i>
                                        @stat.NewHabits
                                    </div>
                                </td>
                                <td>
                                    <div class="metric-badge info">
                                        <i class="fas fa-exchange-alt me-1"></i>
                                        @stat.NewTransactions
                                    </div>
                                </td>
                                <td>
                                    <div class="total-cell">
                                        <strong>@(stat.NewUsers + stat.NewHabits + stat.NewTransactions)</strong>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr class="table-footer">
                            <td><strong>Total</strong></td>
                            <td><strong class="total-value">@growthStats.Sum(s => s.NewUsers)</strong></td>
                            <td><strong class="total-value">@growthStats.Sum(s => s.NewHabits)</strong></td>
                            <td><strong class="total-value">@growthStats.Sum(s => s.NewTransactions)</strong></td>
                            <td><strong class="total-value accent">@growthStats.Sum(s => s.NewUsers + s.NewHabits + s.NewTransactions)</strong></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Gráfico de Crecimiento
        var growthCtx = document.getElementById('growthChart').getContext('2d');
        var growthChart = new Chart(growthCtx, {
            type: 'line',
            data: {
                labels: [
                    @foreach (var stat in growthStats)
                    {
                        @Html.Raw($"'{stat.Date}',")
                    }
                ],
                datasets: [
                    {
                        label: 'Nuevos Usuarios',
                        data: [
                            @foreach (var stat in growthStats)
                            {
                                @Html.Raw($"{stat.NewUsers},")
                            }
                        ],
                        borderColor: '#4361ee',
                        backgroundColor: 'rgba(67, 97, 238, 0.1)',
                        borderWidth: 3,
                        tension: 0.4,
                        fill: true,
                        pointBackgroundColor: '#4361ee',
                        pointBorderColor: '#fff',
                        pointBorderWidth: 2,
                        pointRadius: 5,
                        pointHoverRadius: 7
                    },
                    {
                        label: 'Nuevos Hábitos',
                        data: [
                            @foreach (var stat in growthStats)
                            {
                                @Html.Raw($"{stat.NewHabits},")
                            }
                        ],
                        borderColor: '#10b981',
                        backgroundColor: 'rgba(16, 185, 129, 0.1)',
                        borderWidth: 3,
                        tension: 0.4,
                        fill: true,
                        pointBackgroundColor: '#10b981',
                        pointBorderColor: '#fff',
                        pointBorderWidth: 2,
                        pointRadius: 5,
                        pointHoverRadius: 7
                    },
                    {
                        label: 'Nuevas Transacciones',
                        data: [
                            @foreach (var stat in growthStats)
                            {
                                @Html.Raw($"{stat.NewTransactions},")
                            }
                        ],
                        borderColor: '#8b5cf6',
                        backgroundColor: 'rgba(139, 92, 246, 0.1)',
                        borderWidth: 3,
                        tension: 0.4,
                        fill: true,
                        pointBackgroundColor: '#8b5cf6',
                        pointBorderColor: '#fff',
                        pointBorderWidth: 2,
                        pointRadius: 5,
                        pointHoverRadius: 7
                    }
                ]
            },
            options: {
                maintainAspectRatio: false,
                interaction: {
                    intersect: false,
                    mode: 'index'
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        grid: {
                            color: 'rgba(0, 0, 0, 0.05)'
                        },
                        ticks: {
                            precision: 0
                        }
                    },
                    x: {
                        grid: {
                            display: false
                        }
                    }
                },
                plugins: {
                    tooltip: {
                        backgroundColor: 'rgba(0, 0, 0, 0.8)',
                        titleFont: {
                            size: 14,
                            weight: '600'
                        },
                        bodyFont: {
                            size: 13
                        },
                        padding: 12,
                        cornerRadius: 8
                    },
                    legend: {
                        position: 'top',
                        labels: {
                            usePointStyle: true,
                            padding: 20,
                            font: {
                                size: 12,
                                weight: '600'
                            }
                        }
                    }
                }
            }
        });

        // Gráfico de Distribución de Planes
        var planCtx = document.getElementById('planDistributionChart').getContext('2d');
        var planChart = new Chart(planCtx, {
            type: 'doughnut',
            data: {
                labels: [
                    @foreach (var plan in planDistribution.Distribution)
                    {
                        @Html.Raw($"'{plan.PlanName}',")
                    }
                ],
                datasets: [{
                    data: [
                        @foreach (var plan in planDistribution.Distribution)
                        {
                            @Html.Raw($"{plan.UserCount},")
                        }
                    ],
                    backgroundColor: [
                        @foreach (var plan in planDistribution.Distribution)
                        {
                            @Html.Raw($"'{plan.Color}',")
                        }
                    ],
                    borderWidth: 3,
                    borderColor: '#fff',
                    hoverOffset: 15
                }]
            },
            options: {
                maintainAspectRatio: false,
                cutout: '65%',
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        backgroundColor: 'rgba(0, 0, 0, 0.8)',
                        titleFont: {
                            size: 14,
                            weight: '600'
                        },
                        bodyFont: {
                            size: 13
                        },
                        padding: 12,
                        cornerRadius: 8,
                        callbacks: {
                            label: function(context) {
                                const label = context.label || '';
                                const value = context.raw || 0;
                                const total = context.dataset.data.reduce((a, b) => a + b, 0);
                                const percentage = Math.round((value / total) * 100);
                                return `${label}: ${value} (${percentage}%)`;
                            }
                        }
                    }
                }
            }
        });

        // Filtros
        document.getElementById('applyFilters').addEventListener('click', function() {
            const days = document.getElementById('dateRange').value;
            const metricType = document.getElementById('metricType').value;
            
            // Aquí iría la lógica para actualizar los gráficos con los nuevos filtros
            console.log(`Filtros aplicados: ${days} días, tipo: ${metricType}`);
            
            // Simular actualización
            this.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i>Aplicando...';
            setTimeout(() => {
                this.innerHTML = '<i class="fas fa-check me-2"></i>Filtros Aplicados';
                setTimeout(() => {
                    this.innerHTML = '<i class="fas fa-filter me-2"></i>Aplicar Filtros';
                }, 2000);
            }, 1000);
        });

        // Ordenar tabla por fecha (más reciente primero)
        document.addEventListener('DOMContentLoaded', function() {
            const table = document.getElementById('growthTable');
            const tbody = table.querySelector('tbody');
            const rows = Array.from(tbody.querySelectorAll('tr'));
            
            rows.sort((a, b) => {
                const dateA = a.querySelector('.date-cell').textContent;
                const dateB = b.querySelector('.date-cell').textContent;
                return dateB.localeCompare(dateA);
            });
            
            rows.forEach(row => tbody.appendChild(row));
        });
    </script>
}

