@model LifeHub.Models.Entities.Budget
@{
    ViewData["Title"] = "Nuevo Presupuesto";
}

<div class="finance-container">
    <!-- Navegación Horizontal -->
    <div class="finance-nav">
        <div class="nav-item">
            <a href="@Url.Action("Index", "Finance")">
                <i class="fas fa-chart-line"></i>
                <span>Dashboard</span>
            </a>
        </div>
        
        <div class="nav-item">
            <a href="@Url.Action("Transactions", "Finance")">
                <i class="fas fa-exchange-alt"></i>
                <span>Transacciones</span>
            </a>
        </div>
        
        <div class="nav-item">
            <a href="@Url.Action("Budgets", "Finance")">
                <i class="fas fa-wallet"></i>
                <span>Presupuestos</span>
            </a>
        </div>
        
        <div class="nav-item">
            <a href="@Url.Action("Reports", "Finance")">
                <i class="fas fa-chart-bar"></i>
                <span>Reportes</span>
            </a>
        </div>
    </div>

    <!-- Contenido Principal -->
    <div class="finance-main-content">
        <!-- Header -->
        <div class="finance-header">
            <div class="header-content">
                <h1 class="finance-title">
                    <i class="fas fa-plus-circle me-3"></i>Nuevo Presupuesto
                </h1>
                <p class="finance-subtitle">Establece un límite para ingresos o gastos por categoría</p>
            </div>
            <div class="header-actions">
                <a href="@Url.Action("Budgets", "Finance")" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-2"></i>Volver a Presupuestos
                </a>
            </div>
        </div>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            </div>
        }

        <!-- Formulario -->
        <div class="finance-card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-wallet me-2"></i>
                    Configuración del Presupuesto
                </h3>
            </div>
            <div class="card-body">
                <form asp-action="CreateBudget" method="post" class="budget-form">
                    @Html.AntiForgeryToken()
                    
                    <div class="form-grid">
                        <!-- Tipo de Presupuesto -->
                        <div class="form-group full-width">
                            <label asp-for="BudgetType" class="form-label">Tipo de Presupuesto *</label>
                            <div class="type-selector">
                                <div class="type-option">
                                    <input type="radio" asp-for="BudgetType" value="0" id="typeIncome" class="type-input" checked>
                                    <label for="typeIncome" class="type-label income">
                                        <div class="type-icon">
                                            <i class="fas fa-arrow-up"></i>
                                        </div>
                                        <div class="type-content">
                                            <span class="type-title">Presupuesto de Ingresos</span>
                                            <span class="type-description">Límite para dinero que recibes</span>
                                        </div>
                                    </label>
                                </div>
                                <div class="type-option">
                                    <input type="radio" asp-for="BudgetType" value="1" id="typeExpense" class="type-input">
                                    <label for="typeExpense" class="type-label expense">
                                        <div class="type-icon">
                                            <i class="fas fa-arrow-down"></i>
                                        </div>
                                        <div class="type-content">
                                            <span class="type-title">Presupuesto de Gastos</span>
                                            <span class="type-description">Límite para dinero que gastas</span>
                                        </div>
                                    </label>
                                </div>
                            </div>
                            <span asp-validation-for="BudgetType" class="text-danger"></span>
                        </div>

                        <!-- Categoría -->
                        <div class="form-group">
                            <label asp-for="Category" class="form-label">Categoría *</label>
                            <select asp-for="Category" class="form-select" id="categorySelect">
                                <option value="">Seleccionar categoría</option>
                                <!-- Categorías de Ingresos -->
                                <optgroup label="Ingresos" id="incomeCategories">
                                    <option value="Salario">Salario</option>
                                    <option value="Freelance">Freelance</option>
                                    <option value="Inversiones">Inversiones</option>
                                    <option value="Bonos">Bonos</option>
                                    <option value="Comisiones">Comisiones</option>
                                    <option value="Alquileres">Alquileres</option>
                                    <option value="Dividendos">Dividendos</option>
                                    <option value="Ventas">Ventas</option>
                                    <option value="Otros Ingresos">Otros Ingresos</option>
                                </optgroup>
                                <!-- Categorías de Gastos -->
                                <optgroup label="Gastos Esenciales" id="expenseCategories">
                                    <option value="Alimentación">Alimentación</option>
                                    <option value="Vivienda">Vivienda</option>
                                    <option value="Transporte">Transporte</option>
                                    <option value="Servicios">Servicios (Luz, Agua, Gas)</option>
                                    <option value="Salud">Salud</option>
                                    <option value="Educación">Educación</option>
                                    <option value="Seguros">Seguros</option>
                                </optgroup>
                                <optgroup label="Gastos Personales">
                                    <option value="Entretenimiento">Entretenimiento</option>
                                    <option value="Ropa">Ropa</option>
                                    <option value="Cuidado Personal">Cuidado Personal</option>
                                    <option value="Restaurantes">Restaurantes</option>
                                    <option value="Viajes">Viajes</option>
                                    <option value="Hobbies">Hobbies</option>
                                </optgroup>
                                <optgroup label="Otros Gastos">
                                    <option value="Regalos">Regalos</option>
                                    <option value="Donaciones">Donaciones</option>
                                    <option value="Impuestos">Impuestos</option>
                                    <option value="Mantenimiento">Mantenimiento</option>
                                    <option value="Otros Gastos">Otros Gastos</option>
                                </optgroup>
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <!-- Monto Mensual -->
                        <div class="form-group">
                            <label asp-for="MonthlyAmount" class="form-label">Monto Mensual *</label>
                            <div class="amount-input">
                                <span class="currency-symbol">$</span>
                                <input asp-for="MonthlyAmount" class="form-control" placeholder="0.00" step="0.01" min="0.01">
                            </div>
                            <span asp-validation-for="MonthlyAmount" class="text-danger"></span>
                        </div>

                        <!-- Mes y Año -->
                        <div class="form-group">
                            <label asp-for="MonthYear" class="form-label">Mes y Año *</label>
                            <input asp-for="MonthYear" type="month" class="form-control" value="@DateTime.Now.ToString("yyyy-MM")">
                            <span asp-validation-for="MonthYear" class="text-danger"></span>
                        </div>

                        <!-- Notificaciones -->
                        <div class="form-group full-width">
                            <div class="notification-section">
                                <div class="form-check">
                                    <input asp-for="NotificationsEnabled" class="form-check-input" id="notificationsCheck" checked>
                                    <label class="form-check-label" for="notificationsCheck">
                                        <i class="fas fa-bell me-2"></i>
                                        Recibir notificaciones cuando me acerque al límite del presupuesto
                                    </label>
                                </div>
                                <div class="form-help">
                                    <i class="fas fa-info-circle me-1"></i>
                                    Te notificaremos cuando hayas alcanzado el 80% y 100% de tu presupuesto
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Vista Previa -->
                    <div class="preview-card">
                        <div class="preview-header">
                            <h4 class="preview-title">
                                <i class="fas fa-eye me-2"></i>Vista Previa del Presupuesto
                            </h4>
                        </div>
                        <div class="preview-body">
                            <div class="preview-grid">
                                <div class="preview-item">
                                    <span class="preview-label">Tipo:</span>
                                    <span class="preview-value" id="previewType">
                                        <span class="preview-badge income">Ingresos</span>
                                    </span>
                                </div>
                                <div class="preview-item">
                                    <span class="preview-label">Categoría:</span>
                                    <span class="preview-value" id="previewCategory">-</span>
                                </div>
                                <div class="preview-item">
                                    <span class="preview-label">Monto Mensual:</span>
                                    <span class="preview-value" id="previewAmount">$0.00</span>
                                </div>
                                <div class="preview-item">
                                    <span class="preview-label">Período:</span>
                                    <span class="preview-value" id="previewPeriod">-</span>
                                </div>
                                <div class="preview-item">
                                    <span class="preview-label">Notificaciones:</span>
                                    <span class="preview-value" id="previewNotifications">
                                        <span class="preview-badge enabled">Activadas</span>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save me-2"></i>Crear Presupuesto
                        </button>
                        <a href="@Url.Action("Budgets", "Finance")" class="btn btn-secondary btn-lg">
                            <i class="fas fa-times me-2"></i>Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const typeIncome = document.getElementById('typeIncome');
            const typeExpense = document.getElementById('typeExpense');
            const categorySelect = document.getElementById('categorySelect');
            const incomeCategories = document.getElementById('incomeCategories');
            const expenseCategories = document.getElementById('expenseCategories');
            const monthlyAmount = document.getElementById('MonthlyAmount');
            const monthYear = document.getElementById('MonthYear');
            const notificationsCheck = document.getElementById('notificationsCheck');
            
            const previewType = document.getElementById('previewType');
            const previewCategory = document.getElementById('previewCategory');
            const previewAmount = document.getElementById('previewAmount');
            const previewPeriod = document.getElementById('previewPeriod');
            const previewNotifications = document.getElementById('previewNotifications');

            // Mostrar/ocultar categorías según tipo
            function updateCategories() {
                if (typeIncome.checked) {
                    incomeCategories.style.display = 'block';
                    expenseCategories.style.display = 'none';
                    // Resetear selección si era una categoría de gastos
                    if (expenseCategories.querySelector('option:checked')) {
                        categorySelect.value = '';
                    }
                } else {
                    incomeCategories.style.display = 'none';
                    expenseCategories.style.display = 'block';
                    // Resetear selección si era una categoría de ingresos
                    if (incomeCategories.querySelector('option:checked')) {
                        categorySelect.value = '';
                    }
                }
                updatePreview();
            }

            function updatePreview() {
                // Actualizar tipo
                const typeBadge = previewType.querySelector('.preview-badge');
                typeBadge.textContent = typeIncome.checked ? 'Ingresos' : 'Gastos';
                typeBadge.className = typeIncome.checked ? 'preview-badge income' : 'preview-badge expense';
                
                // Actualizar categoría
                previewCategory.textContent = categorySelect.value || '-';
                
                // Actualizar monto
                const amount = parseFloat(monthlyAmount.value) || 0;
                previewAmount.textContent = '$' + amount.toLocaleString('es-ES', {
                    minimumFractionDigits: 2,
                    maximumFractionDigits: 2
                });
                
                // Actualizar período
                if (monthYear.value) {
                    const date = new Date(monthYear.value + '-01');
                    previewPeriod.textContent = date.toLocaleDateString('es-ES', {
                        year: 'numeric',
                        month: 'long'
                    });
                } else {
                    previewPeriod.textContent = '-';
                }

                // Actualizar notificaciones
                const notificationsBadge = previewNotifications.querySelector('.preview-badge');
                notificationsBadge.textContent = notificationsCheck.checked ? 'Activadas' : 'Desactivadas';
                notificationsBadge.className = notificationsCheck.checked ? 'preview-badge enabled' : 'preview-badge disabled';
            }

            // Event listeners
            typeIncome.addEventListener('change', updateCategories);
            typeExpense.addEventListener('change', updateCategories);
            categorySelect.addEventListener('change', updatePreview);
            monthlyAmount.addEventListener('input', updatePreview);
            monthYear.addEventListener('change', updatePreview);
            notificationsCheck.addEventListener('change', updatePreview);

            // Inicializar
            updateCategories();
            updatePreview();
        });
    </script>
}

