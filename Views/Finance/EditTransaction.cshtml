    @@media (max-width: 480px) {
        .nav-item {
            flex: 1 0 100%;
        }
        
        .type-label {
            padding: 1rem;
        }
        
        .type-icon {
            width: 40px;
            height: 40px;
            font-size: 1rem;
        }
    }
</style>