@model LifeHub.Models.Entities.FinancialTransaction
@{
    ViewData["Title"] = "Editar Transacción";
}

<div class="finance-container">
    <!-- Navegación Horizontal -->
    <div class="finance-nav">
        <div class="nav-item">
            <a href="@Url.Action("Index", "Finance")">
                <i class="fas fa-chart-line"></i>
                <span>Dashboard</span>
            </a>
        </div>
        
        <div class="nav-item">
            <a href="@Url.Action("Transactions", "Finance")">
                <i class="fas fa-exchange-alt"></i>
                <span>Transacciones</span>
            </a>
        </div>
        
        <div class="nav-item">
            <a href="@Url.Action("Budgets", "Finance")">
                <i class="fas fa-wallet"></i>
                <span>Presupuestos</span>
            </a>
        </div>
        
        <div class="nav-item">
            <a href="@Url.Action("Reports", "Finance")">
                <i class="fas fa-chart-bar"></i>
                <span>Reportes</span>
            </a>
        </div>
    </div>

    <!-- Contenido Principal -->
    <div class="finance-main-content">
        <!-- Header -->
        <div class="finance-header">
            <div class="header-content">
                <h1 class="finance-title">
                    <i class="fas fa-edit me-3"></i>Editar Transacción
                </h1>
                <p class="finance-subtitle">Modifica los detalles de tu transacción</p>
            </div>
            <div class="header-actions">
                <a href="@Url.Action("Transactions", "Finance")" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-2"></i>Volver a Transacciones
                </a>
            </div>
        </div>

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger">
                <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            </div>
        }

        <!-- Formulario -->
        <div class="finance-card">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-receipt me-2"></i>
                    Detalles de la Transacción
                </h3>
            </div>
            <div class="card-body">
                <form asp-action="EditTransaction" method="post" class="transaction-form">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="UserId" />
                    <input type="hidden" asp-for="CreatedAt" />
                    
                    <div class="form-grid">
                        <!-- Tipo de Transacción -->
                        <div class="form-group full-width">
                            <label asp-for="TransactionType" class="form-label">Tipo de Transacción *</label>
                            <div class="type-selector">
                                <div class="type-option">
                                    <input type="radio" asp-for="TransactionType" value="0" id="typeIncome" class="type-input">
                                    <label for="typeIncome" class="type-label income">
                                        <div class="type-icon">
                                            <i class="fas fa-arrow-up"></i>
                                        </div>
                                        <div class="type-content">
                                            <span class="type-title">Ingreso</span>
                                            <span class="type-description">Dinero que recibes</span>
                                        </div>
                                    </label>
                                </div>
                                <div class="type-option">
                                    <input type="radio" asp-for="TransactionType" value="1" id="typeExpense" class="type-input">
                                    <label for="typeExpense" class="type-label expense">
                                        <div class="type-icon">
                                            <i class="fas fa-arrow-down"></i>
                                        </div>
                                        <div class="type-content">
                                            <span class="type-title">Gasto</span>
                                            <span class="type-description">Dinero que gastas</span>
                                        </div>
                                    </label>
                                </div>
                            </div>
                            <span asp-validation-for="TransactionType" class="text-danger"></span>
                        </div>

                        <!-- Monto -->
                        <div class="form-group">
                            <label asp-for="Amount" class="form-label">Monto *</label>
                            <div class="amount-input">
                                <span class="currency-symbol">$</span>
                                <input asp-for="Amount" class="form-control" placeholder="0.00" step="0.01" min="0.01">
                            </div>
                            <span asp-validation-for="Amount" class="text-danger"></span>
                        </div>

                        <!-- Fecha -->
                        <div class="form-group">
                            <label asp-for="TransactionDate" class="form-label">Fecha *</label>
                            <input asp-for="TransactionDate" type="date" class="form-control">
                            <span asp-validation-for="TransactionDate" class="text-danger"></span>
                        </div>

                        <!-- Descripción -->
                        <div class="form-group full-width">
                            <label asp-for="Description" class="form-label">Descripción *</label>
                            <input asp-for="Description" class="form-control" placeholder="Ej: Salario mensual, Compra en supermercado...">
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <!-- Categoría -->
                        <div class="form-group">
                            <label asp-for="Category" class="form-label">Categoría *</label>
                            <select asp-for="Category" class="form-select" id="categorySelect">
                                <option value="">Seleccionar categoría</option>
                                <optgroup label="Ingresos" id="incomeCategories">
                                    <option value="Salario">Salario</option>
                                    <option value="Freelance">Freelance</option>
                                    <option value="Inversiones">Inversiones</option>
                                    <option value="Regalos">Regalos</option>
                                    <option value="Otros Ingresos">Otros Ingresos</option>
                                </optgroup>
                                <optgroup label="Gastos" id="expenseCategories">
                                    <option value="Alimentación">Alimentación</option>
                                    <option value="Transporte">Transporte</option>
                                    <option value="Vivienda">Vivienda</option>
                                    <option value="Entretenimiento">Entretenimiento</option>
                                    <option value="Salud">Salud</option>
                                    <option value="Educación">Educación</option>
                                    <option value="Ropa">Ropa</option>
                                    <option value="Otros Gastos">Otros Gastos</option>
                                </optgroup>
                            </select>
                            <span asp-validation-for="Category" class="text-danger"></span>
                        </div>

                        <!-- Subcategoría -->
                        <div class="form-group">
                            <label asp-for="Subcategory" class="form-label">Subcategoría</label>
                            <input asp-for="Subcategory" class="form-control" placeholder="Opcional (ej: Supermercado, Gasolina)">
                        </div>

                        <!-- Recurrencia -->
                        <div class="form-group full-width">
                            <div class="recurring-section">
                                <div class="form-check">
                                    <input asp-for="Recurring" class="form-check-input" id="recurringCheck">
                                    <label class="form-check-label" for="recurringCheck">
                                        <i class="fas fa-redo me-2"></i>
                                        Esta es una transacción recurrente
                                    </label>
                                </div>
                                
                                <div class="recurring-fields" id="recurringFields">
                                    <div class="recurring-options">
                                        <label asp-for="RecurringFrequency" class="form-label">Frecuencia</label>
                                        <select asp-for="RecurringFrequency" class="form-select">
                                            <option value="">Seleccionar frecuencia</option>
                                            <option value="Diario">Diario</option>
                                            <option value="Semanal">Semanal</option>
                                            <option value="Quincenal">Quincenal</option>
                                            <option value="Mensual">Mensual</option>
                                            <option value="Anual">Anual</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="fas fa-save me-2"></i>Guardar Cambios
                        </button>
                        <a href="@Url.Action("Transactions", "Finance")" class="btn btn-secondary btn-lg">
                            <i class="fas fa-times me-2"></i>Cancelar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const typeIncome = document.getElementById('typeIncome');
            const typeExpense = document.getElementById('typeExpense');
            const incomeCategories = document.getElementById('incomeCategories');
            const expenseCategories = document.getElementById('expenseCategories');
            const recurringCheck = document.getElementById('recurringCheck');
            const recurringFields = document.getElementById('recurringFields');

            // Mostrar/ocultar categorías según tipo
            function updateCategories() {
                if (typeIncome.checked) {
                    incomeCategories.style.display = 'block';
                    expenseCategories.style.display = 'none';
                } else {
                    incomeCategories.style.display = 'none';
                    expenseCategories.style.display = 'block';
                }
            }

            // Mostrar/ocultar campos de recurrencia
            function updateRecurringFields() {
                if (recurringCheck.checked) {
                    recurringFields.style.display = 'block';
                } else {
                    recurringFields.style.display = 'none';
                }
            }

            typeIncome.addEventListener('change', updateCategories);
            typeExpense.addEventListener('change', updateCategories);
            recurringCheck.addEventListener('change', updateRecurringFields);

            // Inicializar
            updateCategories();
            updateRecurringFields();
        });
    </script>
}

<style>
    /* === ESTILOS BASE DEL DASHBOARD FINANCIERO === */
