@model LifeHub.Models.SubscriptionPlan

@{
    ViewData["Title"] = Model.Name;
    var isFreePlan = Model.Price == 0;
}

<div class="plan-details-container">
    <!-- Hero Section Mejorada -->
    <section class="details-hero" style="background: linear-gradient(135deg, @Model.ColorCode 0%, #@(Model.ColorCode.Substring(1))88 100%);">
        <div class="container">
            <div class="hero-content">
                <div class="hero-text">
                    @if (isFreePlan)
                    {
                        <span class="hero-badge free-badge">
                            <i class="fas fa-gem me-2"></i>Plan Gratis
                        </span>
                    }
                    else if (Model.IsFeatured)
                    {
                        <span class="hero-badge featured-badge">
                            <i class="fas fa-crown me-2"></i>Más Popular
                        </span>
                    }
                    
                    <h1 class="hero-title">@Model.Name</h1>
                    <p class="hero-subtitle">@Model.ShortDescription</p>
                    
                    <div class="price-display">
                        <span class="price">@Model.FormattedPrice</span>
                        <span class="period">/@Model.Period</span>
                    </div>
                    
                    <p class="hero-description">@Model.LongDescription</p>
                </div>
                <div class="hero-visual">
                    <div class="plan-visual">
                        @if (isFreePlan)
                        {
                            <i class="fas fa-rocket"></i>
                        }
                        else if (Model.Name.Contains("Premium") || Model.Name.Contains("Máxima"))
                        {
                            <i class="fas fa-crown"></i>
                        }
                        else
                        {
                            <i class="fas fa-star"></i>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Grid Mejorada -->
    <section class="features-grid-section">
        <div class="container">
            <div class="section-header">
                <h2 class="section-title">Todo lo que incluye este plan</h2>
                <p class="section-subtitle">Características diseñadas para maximizar tu productividad</p>
            </div>

            <div class="features-grid">
                <!-- Columna 1: Funcionalidades Esenciales -->
                <div class="feature-category">
                    <div class="category-header">
                        <div class="category-icon">
                            <i class="fas fa-gem"></i>
                        </div>
                        <h3>Funcionalidades Principales</h3>
                    </div>
                    <div class="features-list">
                        <div class="feature-item primary">
                            <div class="feature-icon">
                                <i class="fas fa-tasks"></i>
                            </div>
                            <div class="feature-content">
                                <h4>Gestión de Hábitos</h4>
                                <p>@Model.MaxHabits hábitos @(Model.MaxHabits >= 999 ? "ilimitados" : "simultáneos") con seguimiento avanzado y recordatorios inteligentes</p>
                            </div>
                        </div>
                        
                        <div class="feature-item primary">
                            <div class="feature-icon">
                                <i class="fas fa-chart-line"></i>
                            </div>
                            <div class="feature-content">
                                <h4>Control Financiero</h4>
                                <p>@Model.MaxTransactions transacciones mensuales @(Model.MaxTransactions >= 999 ? "ilimitadas" : "") con categorización automática</p>
                            </div>
                        </div>
                        
                        <div class="feature-item primary">
                            <div class="feature-icon">
                                <i class="fas fa-heartbeat"></i>
                            </div>
                            <div class="feature-content">
                                <h4>Seguimiento de Salud</h4>
                                <p>Monitoreo completo de actividad física, alimentación y bienestar mental</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Columna 2: Beneficios Avanzados -->
                <div class="feature-category">
                    <div class="category-header">
                        <div class="category-icon">
                            <i class="fas fa-rocket"></i>
                        </div>
                        <h3>Beneficios Avanzados</h3>
                    </div>
                    <div class="features-list">
                        <div class="feature-item">
                            <div class="feature-icon">
                                <i class="fas fa-database"></i>
                            </div>
                            <div class="feature-content">
                                <h4>Almacenamiento Seguro</h4>
                                <p>@Model.StorageMB MB de almacenamiento en la nube con encriptación de grado bancario</p>
                            </div>
                        </div>
                        
                        @if (Model.HasCommunityAccess)
                        {
                            <div class="feature-item">
                                <div class="feature-icon">
                                    <i class="fas fa-users"></i>
                                </div>
                                <div class="feature-content">
                                    <h4>Comunidad Exclusiva</h4>
                                    <p>Acceso a grupos especializados y eventos exclusivos de la comunidad LifeHub</p>
                                </div>
                            </div>
                        }
                        
                        @if (Model.HasAIFeatures)
                        {
                            <div class="feature-item">
                                <div class="feature-icon">
                                    <i class="fas fa-robot"></i>
                                </div>
                                <div class="feature-content">
                                    <h4>Inteligencia Artificial</h4>
                                    <p>Análisis predictivo y recomendaciones personalizadas basadas en tus patrones</p>
                                </div>
                            </div>
                        }
                        
                        @if (Model.HasAdvancedAnalytics)
                        {
                            <div class="feature-item">
                                <div class="feature-icon">
                                    <i class="fas fa-chart-bar"></i>
                                </div>
                                <div class="feature-content">
                                    <h4>Analíticas Profundas</h4>
                                    <p>Reportes detallados y insights avanzados sobre tu progreso y métricas</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

<!-- Stats Section Mejorada -->
<section class="stats-section-improved">
    <div class="container">
        <div class="stats-header">
            <h2 class="stats-title">Capacidades del Plan</h2>
            <p class="stats-subtitle">Recursos y límites diseñados para tus necesidades</p>
        </div>
        
        <div class="stats-grid-improved">
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-tasks"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number">@(Model.MaxHabits >= 999 ? "Ilimitados" : Model.MaxHabits.ToString())</div>
                    <div class="stat-label">Hábitos Activos</div>
                    <div class="stat-description">Crea y sigue todos los hábitos que necesites para tu rutina diaria</div>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-exchange-alt"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number">@(Model.MaxTransactions >= 999 ? "Ilimitadas" : Model.MaxTransactions.ToString() + "/mes")</div>
                    <div class="stat-label">Transacciones</div>
                    <div class="stat-description">Registra tus ingresos y gastos sin restricciones</div>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-database"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number">@Model.StorageMB MB</div>
                    <div class="stat-label">Almacenamiento</div>
                    <div class="stat-description">Espacio seguro para documentos y respaldos</div>
                </div>
            </div>
            
            <div class="stat-card">
                <div class="stat-icon">
                    <i class="fas fa-calendar-check"></i>
                </div>
                <div class="stat-content">
                    <div class="stat-number">@Model.DurationDays</div>
                    <div class="stat-label">Días de Acceso</div>
                    <div class="stat-description">Duración completa de tu suscripción</div>
                </div>
            </div>
        </div>
        
        <!-- Additional Features Dinámicos basados en las propiedades reales -->
        <div class="feature-highlights">
            @if (Model.HasAIFeatures)
            {
                <div class="feature-highlight">
                    <i class="fas fa-robot"></i>
                    <span>Inteligencia Artificial</span>
                </div>
            }
            @if (Model.HasAdvancedAnalytics)
            {
                <div class="feature-highlight">
                    <i class="fas fa-chart-bar"></i>
                    <span>Analíticas Avanzadas</span>
                </div>
            }
            @if (Model.HasCommunityAccess)
            {
                <div class="feature-highlight">
                    <i class="fas fa-users"></i>
                    <span>Comunidad Premium</span>
                </div>
            }
            @if (Model.IsFeatured)
            {
                <div class="feature-highlight">
                    <i class="fas fa-crown"></i>
                    <span>Plan Destacado</span>
                </div>
            }
            @if (Model.MaxHabits > 15)
            {
                <div class="feature-highlight">
                    <i class="fas fa-infinity"></i>
                    <span>Hábitos Ilimitados</span>
                </div>
            }
            @if (Model.MaxTransactions > 200)
            {
                <div class="feature-highlight">
                    <i class="fas fa-wallet"></i>
                    <span>Finanzas Ilimitadas</span>
                </div>
            }
            @if (Model.StorageMB > 100)
            {
                <div class="feature-highlight">
                    <i class="fas fa-cloud"></i>
                    <span>Almacenamiento Extra</span>
                </div>
            }
            <div class="feature-highlight">
                <i class="fas fa-shield-check"></i>
                <span>Seguridad Bancaria</span>
            </div>
            <div class="feature-highlight">
                <i class="fas fa-sync"></i>
                <span>Sincronización</span>
            </div>
            <div class="feature-highlight">
                <i class="fas fa-mobile-alt"></i>
                <span>App Móvil</span>
            </div>
            @if (!isFreePlan)
            {
                <div class="feature-highlight">
                    <i class="fas fa-cloud-download-alt"></i>
                    <span>Respaldos Automáticos</span>
                </div>
            }
        </div>
    </div>
</section>

    <!-- CTA Section Mejorada -->
    <section class="details-cta">
        <div class="container">
            <div class="cta-card">
                <div class="cta-content">
                    <h3>¿Listo para comenzar?</h3>
                    <p>Únete a miles de usuarios que ya están transformando sus vidas con LifeHub</p>
                    
                    <div class="cta-buttons">
                        @if (isFreePlan)
                        {
                            <form method="post" asp-action="ChangePlan" asp-controller="Plans">
                                <input type="hidden" name="planId" value="@Model.Id" />
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="fas fa-play-circle me-2"></i>
                                    Comenzar Gratis
                                </button>
                            </form>
                        }
                        else
                        {
                            <a href="@Url.Action("Payment", "Plans", new { planId = Model.Id })" class="btn btn-primary btn-lg">
                                <i class="fas fa-credit-card me-2"></i>
                                Elegir @Model.Name
                            </a>
                        }
                        <a href="@Url.Action("Index", "Plans")" class="btn btn-outline-light btn-lg">
                            <i class="fas fa-arrow-left me-2"></i>
                            Ver Todos los Planes
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

