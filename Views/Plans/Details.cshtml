/* Stats Section Mejorada */
.stats-section-improved {
    padding: 60px 0;
    background: linear-gradient(135deg, #0f172a 0%, #1e293b 100%);
    color: white;
    position: relative;
    overflow: hidden;
}

.stats-section-improved::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000"><polygon fill="rgba(255,255,255,0.02)" points="0,1000 1000,0 1000,1000"/></svg>');
    background-size: cover;
}

.stats-header {
    text-align: center;
    margin-bottom: 3rem;
}

.stats-title {
    font-size: 2.2rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    background: linear-gradient(45deg, #60A5FA, #A78BFA);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

.stats-subtitle {
    font-size: 1.1rem;
    opacity: 0.8;
    max-width: 500px;
    margin: 0 auto;
}

/* Grid mejorado para 4 elementos - siempre 2x2 en móvil, 4 en desktop */
.stats-grid-improved {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    margin-bottom: 3rem;
    max-width: 900px;
    margin-left: auto;
    margin-right: auto;
}

.stat-card {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    padding: 2rem 1rem;
    text-align: center;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.stat-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(45deg, @Model.ColorCode, #@(Model.ColorCode.Substring(1))99);
}

.stat-card:hover {
    transform: translateY(-5px);
    background: rgba(255, 255, 255, 0.08);
    box-shadow: 0 15px 30px rgba(0,0,0,0.2);
}

.stat-icon {
    width: 70px;
    height: 70px;
    background: linear-gradient(135deg, @Model.ColorCode, #@(Model.ColorCode.Substring(1))99);
    border-radius: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
    color: white;
    font-size: 1.8rem;
    box-shadow: 0 8px 20px rgba(0,0,0,0.2);
}

.stat-number {
    font-size: 2.2rem;
    font-weight: 800;
    margin-bottom: 0.5rem;
    background: linear-gradient(45deg, #ffffff, #e2e8f0);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    line-height: 1;
    min-height: 2.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
}

.stat-label {
    font-size: 1rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #e2e8f0;
}

.stat-description {
    font-size: 0.85rem;
    opacity: 0.7;
    line-height: 1.4;
    max-width: 200px;
    margin: 0 auto;
}

/* Feature Highlights mejorado - ahora dinámico según el plan */
.feature-highlights {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(160px, 1fr));
    gap: 1rem;
    max-width: 1000px;
    margin: 0 auto;
    padding-top: 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
}

.feature-highlight {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    gap: 0.75rem;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 10px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
    font-size: 0.9rem;
}

.feature-highlight:hover {
    background: rgba(255, 255, 255, 0.08);
    transform: translateY(-2px);
    border-color: @Model.ColorCode;
}

.feature-highlight i {
    color: @Model.ColorCode;
    font-size: 1rem;
    width: 20px;
    text-align: center;
}

.feature-highlight span {
    font-weight: 500;
    color: #e2e8f0;
    white-space: nowrap;
}

