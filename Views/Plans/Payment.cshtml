@model LifeHub.Models.SubscriptionPlan

@{
    ViewData["Title"] = "Procesar Pago - " + Model.Name;
    var isFreePlan = Model.Price == 0;
}

<div class="payment-container">
    <div class="payment-card">
        <!-- Header con logo y título -->
        <div class="payment-header">
            <div class="payment-logo">
                <i class="fas fa-shield-alt"></i>
            </div>
            <h1 class="payment-title">Procesar Pago</h1>
            <p class="payment-subtitle">Completa la información para cambiar al plan <strong>@Model.Name</strong></p>
        </div>

        <form method="post" asp-action="ProcessPayment" class="payment-form">
            <input type="hidden" name="planId" value="@Model.Id" />
            
            <div class="payment-content">
                <div class="payment-details">
                    <h3 class="section-title">
                        <i class="fas fa-credit-card me-2"></i>
                        Información de Pago
                    </h3>
                    
                    <!-- Número de Tarjeta -->
                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-credit-card me-2"></i>Número de Tarjeta
                        </label>
                        <div class="input-group">
                            <input type="text" class="form-control" name="cardNumber" placeholder="1234 5678 9012 3456" required 
                                   pattern="[0-9\s]{13,19}" maxlength="19">
                            <div class="input-icon">
                                <i class="fas fa-credit-card"></i>
                            </div>
                        </div>
                        <div class="card-icons">
                            <i class="fab fa-cc-visa"></i>
                            <i class="fab fa-cc-mastercard"></i>
                            <i class="fab fa-cc-amex"></i>
                            <i class="fab fa-cc-discover"></i>
                        </div>
                    </div>

                    <!-- Fecha Expiración y CVV -->
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">
                                    <i class="fas fa-calendar me-2"></i>Fecha Exp.
                                </label>
                                <div class="input-group">
                                    <input type="text" class="form-control" name="expiryDate" placeholder="MM/AA" required 
                                           pattern="(0[1-9]|1[0-2])\/[0-9]{2}" maxlength="5">
                                    <div class="input-icon">
                                        <i class="fas fa-calendar-alt"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label class="form-label">
                                    <i class="fas fa-lock me-2"></i>CVV
                                </label>
                                <div class="input-group">
                                    <input type="text" class="form-control" name="cvv" placeholder="123" required 
                                           pattern="[0-9]{3,4}" maxlength="4">
                                    <div class="input-icon">
                                        <i class="fas fa-lock"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Nombre en la Tarjeta -->
                    <div class="form-group">
                        <label class="form-label">
                            <i class="fas fa-user me-2"></i>Nombre en la Tarjeta
                        </label>
                        <div class="input-group">
                            <input type="text" class="form-control" name="cardName" placeholder="Juan Pérez" required>
                            <div class="input-icon">
                                <i class="fas fa-user"></i>
                            </div>
                        </div>
                    </div>

                    <!-- Información de Seguridad -->
                    <div class="security-info">
                        <i class="fas fa-shield-check"></i>
                        <span>Tu información está protegida con encriptación de grado bancario</span>
                    </div>
                </div>

                <div class="payment-summary">
                    <div class="summary-card">
                        <h3 class="section-title">
                            <i class="fas fa-receipt me-2"></i>
                            Resumen del Pedido
                        </h3>
                        
                        <div class="summary-content">
                            <div class="summary-item">
                                <span>Plan seleccionado:</span>
                                <strong>@Model.Name</strong>
                            </div>
                            <div class="summary-item">
                                <span>Precio:</span>
                                <strong>@Model.FormattedPrice/@Model.Period</strong>
                            </div>
                            <div class="summary-item">
                                <span>Próxima facturación:</span>
                                <span>@DateTime.Now.AddDays(Model.DurationDays).ToString("dd/MM/yyyy")</span>
                            </div>
                            
                            <div class="summary-features">
                                <h5>Incluye:</h5>
                                <ul>
                                    <li>
                                        <i class="fas fa-check"></i>
                                        @(Model.MaxHabits >= 999 ? "Hábitos ilimitados" : $"{Model.MaxHabits} hábitos simultáneos")
                                    </li>
                                    <li>
                                        <i class="fas fa-check"></i>
                                        @(Model.MaxTransactions >= 999 ? "Transacciones ilimitadas" : $"{Model.MaxTransactions} transacciones/mes")
                                    </li>
                                    <li>
                                        <i class="fas fa-check"></i>
                                        @Model.StorageMB MB de almacenamiento
                                    </li>
                                    @if (Model.HasAIFeatures)
                                    {
                                        <li><i class="fas fa-check"></i>Inteligencia Artificial</li>
                                    }
                                    @if (Model.HasAdvancedAnalytics)
                                    {
                                        <li><i class="fas fa-check"></i>Analíticas Avanzadas</li>
                                    }
                                    @if (Model.HasCommunityAccess)
                                    {
                                        <li><i class="fas fa-check"></i>Comunidad Premium</li>
                                    }
                                </ul>
                            </div>
                            
                            <div class="summary-total">
                                <hr>
                                <div class="total-item">
                                    <span>Total a pagar:</span>
                                    <strong class="total-price">@Model.FormattedPrice</strong>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Botones de acción -->
            <div class="payment-actions">
                <button type="submit" class="btn btn-primary btn-payment">
                    <i class="fas fa-lock me-2"></i>
                    Confirmar Pago Seguro
                </button>
                <a href="@Url.Action("Index", "Plans")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>
                    Volver a Planes
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        // Formatear número de tarjeta
        document.querySelector('input[name="cardNumber"]').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\s+/g, '').replace(/[^0-9]/gi, '');
            let formattedValue = value.match(/.{1,4}/g)?.join(' ');
            e.target.value = formattedValue || value;
        });

        // Formatear fecha de expiración
        document.querySelector('input[name="expiryDate"]').addEventListener('input', function(e) {
            let value = e.target.value.replace(/\D/g, '');
            if (value.length >= 2) {
                value = value.substring(0, 2) + '/' + value.substring(2, 4);
            }
            e.target.value = value;
        });

        // Solo números para CVV
        document.querySelector('input[name="cvv"]').addEventListener('input', function(e) {
            e.target.value = e.target.value.replace(/\D/g, '');
        });

        // Efectos de focus en inputs
        document.addEventListener('DOMContentLoaded', function() {
            const inputs = document.querySelectorAll('.form-control');
            
            inputs.forEach(input => {
                input.addEventListener('focus', function() {
                    this.parentElement.classList.add('focused');
                });
                
                input.addEventListener('blur', function() {
                    if (this.value === '') {
                        this.parentElement.classList.remove('focused');
                    }
                });
            });
        });
    </script>
}

