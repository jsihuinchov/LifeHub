@section Scripts {
    <script>
        // Cargar favoritos en el dashboard
        document.addEventListener('DOMContentLoaded', function() {
            fetch('/Habits/GetFavorites')
                .then(response => response.json())
                .then(favorites => {
                    const container = document.getElementById('dashboardFavorites');
                    const noFavorites = document.getElementById('noDashboardFavorites');

                    if (favorites.length > 0) {
                        container.innerHTML = favorites.map(habit => `
                            <div class="favorite-dashboard-item">
                                <div class="favorite-dashboard-icon" style="background: ${habit.color}">
                                    ${habit.icon}
                                </div>
                                <div class="favorite-dashboard-content">
                                    <h5>${habit.name}</h5>
                                    <div class="favorite-dashboard-streak ${habit.completedToday ? 'completed' : ''}">
                                        <i class="fas fa-fire"></i> ${habit.streak} días
                                    </div>
                                </div>
                                <button class="btn-complete-dashboard" data-habit-id="${habit.id}">
                                    <i class="fas fa-check"></i>
                                </button>
                            </div>
                        `).join('');

                        noFavorites.style.display = 'none';

                        // Agregar eventos a los botones de completar
                        document.querySelectorAll('.btn-complete-dashboard').forEach(button => {
                            button.addEventListener('click', function() {
                                const habitId = this.dataset.habitId;
                                const today = new Date().toISOString().split('T')[0];
                                fetch(`/Habits/ToggleCompletion/${habitId}?date=${today}`, {
                                    method: 'POST',
                                    headers: {
                                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value,
                                        'Content-Type': 'application/json'
                                    }
                                })
                                .then(response => response.json())
                                .then(data => {
                                    if (data.success) {
                                        location.reload();
                                    }
                                });
                            });
                        });

                    } else {
                        container.style.display = 'none';
                        noFavorites.style.display = 'block';
                    }
                });
        });
    </script>
}

