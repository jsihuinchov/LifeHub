    private bool ShouldShowCommunity(LifeHub.Models.UserSubscription subscription)
    {
        if (subscription?.Plan == null) return false;
        
        // Forzar comunidad activa para planes "Vida Máxima" o que tengan HasCommunityAccess = true
        return subscription.Plan.HasCommunityAccess || 
               subscription.Plan.Name?.Contains("Máxima") == true ||
