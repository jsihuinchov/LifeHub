@{
    ViewData["Title"] = "Dashboard";
    var subscription = ViewBag.UserSubscription as LifeHub.Models.UserSubscription;
    var userEmail = ViewBag.UserEmail as string;
    var financeSummary = ViewBag.FinanceSummary as dynamic;
    var recentTransactions = ViewBag.RecentTransactions as List<dynamic>;
    var hasBudgetAlerts = ViewBag.HasBudgetAlerts as bool? ?? false;
    
    // Datos de uso real del plan
    var transactionUsage = ViewBag.TransactionUsage as (int current, int max)? ?? (0, 50);
    var budgetUsage = ViewBag.BudgetUsage as (int current, int max)? ?? (0, 5);
    var habitUsage = ViewBag.HabitUsage as (int current, int max)? ?? (0, 3);
    
    // Datos para módulos
    var activeHabitsCount = ViewBag.ActiveHabitsCount ?? 0;
    var currentStreak = ViewBag.CurrentStreak ?? 0;
    var weeklyProgress = ViewBag.WeeklyProgress ?? 0;
    var healthActivitiesCount = ViewBag.HealthActivitiesCount ?? 0;
    var mealsTracked = ViewBag.MealsTracked ?? 0;
    var dailyHealthGoal = ViewBag.DailyHealthGoal ?? 0;
    var storageUsedMB = ViewBag.StorageUsedMB ?? 0;
    
    // Datos de comunidad
    var communityMembers = ViewBag.CommunityMembers ?? 0;
    var activeDiscussions = ViewBag.ActiveDiscussions ?? 0;
    var communityActivity = ViewBag.CommunityActivity ?? 0;

    // Información de depuración
    var hasFinanceData = financeSummary != null;
    var transactionCount = recentTransactions?.Count ?? 0;
    var hasSubscription = subscription != null && subscription.Plan != null;
}

<div class="dashboard-container">
    <!-- Header del Dashboard -->
    <div class="dashboard-header">
        <div class="header-content">
            <h1 class="dashboard-title">Mi Dashboard</h1>
            <p class="dashboard-subtitle">Bienvenido de vuelta, <strong>@userEmail</strong></p>
        </div>
        <div class="header-actions">
            <div class="user-badge">
                <i class="fas fa-user-circle me-2"></i>
                @userEmail
            </div>
        </div>
    </div>

    <!-- Alertas -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dashboard">
            <div class="alert-content">
                <i class="fas fa-check-circle me-2"></i>
                <span>@TempData["SuccessMessage"]</span>
            </div>
            <button type="button" class="alert-close" onclick="this.parentElement.style.display='none'">
                <i class="fas fa-times"></i>
            </button>
        </div>
    }

    <!-- Contenido Principal -->
    <div class="dashboard-content">
        <!-- Columna Izquierda - Información del Plan -->
        <div class="dashboard-sidebar">
            <!-- Tarjeta de Plan Actual -->
            <div class="dashboard-card plan-card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-crown me-2"></i>
                        Mi Plan Actual
                    </h3>
                </div>
                <div class="card-body">
                    @if (subscription != null && subscription.Plan != null)
                    {
                        <div class="plan-info">
                            <div class="plan-badge" style="background: @subscription.Plan.ColorCode;">
                                <i class="fas fa-gem"></i>
                                <span>@subscription.Plan.Name</span>
                            </div>
                            
                            <div class="plan-price">
                                @subscription.Plan.FormattedPrice<small>/@subscription.Plan.Period</small>
                            </div>
                            
                            <div class="plan-features">
                                <div class="feature-item">
                                    <div class="feature-icon">
                                        <i class="fas fa-tasks"></i>
                                    </div>
                                    <div class="feature-content">
                                        <span class="feature-value">@(subscription.Plan.MaxHabits >= 9999 ? "Ilimitados" : subscription.Plan.MaxHabits.ToString())</span>
                                        <span class="feature-label">Hábitos</span>
                                    </div>
                                </div>
                                
                                <div class="feature-item">
                                    <div class="feature-icon">
                                        <i class="fas fa-exchange-alt"></i>
                                    </div>
                                    <div class="feature-content">
                                        <span class="feature-value">@(subscription.Plan.MaxTransactions >= 9999 ? "Ilimitadas" : subscription.Plan.MaxTransactions.ToString())</span>
                                        <span class="feature-label">Transacciones</span>
                                    </div>
                                </div>
                                
                                <div class="feature-item">
                                    <div class="feature-icon">
                                        <i class="fas fa-wallet"></i>
                                    </div>
                                    <div class="feature-content">
                                        <span class="feature-value">@subscription.Plan.MaxBudgets</span>
                                        <span class="feature-label">Presupuestos</span>
                                    </div>
                                </div>

                                <div class="feature-item">
                                    <div class="feature-icon">
                                        <i class="fas fa-users"></i>
                                    </div>
                                    <div class="feature-content">
                                        <span class="feature-value">@(subscription.Plan.HasCommunityAccess ? "Incluido" : "No incluido")</span>
                                        <span class="feature-label">Comunidad</span>
                                    </div>
                                </div>
                            </div>

                            <div class="plan-status">
                                <div class="status-item">
                                    <span class="status-label">Estado:</span>
                                    <span class="status-value badge-active">Activo</span>
                                </div>
                                <div class="status-item">
                                    <span class="status-label">Renovación:</span>
                                    <span class="status-value">@subscription.EndDate.ToString("dd/MM/yyyy")</span>
                                </div>
                                <div class="status-item">
                                    <span class="status-label">Días restantes:</span>
                                    <span class="status-value">
                                        @{
                                            var daysLeft = subscription.DaysRemaining;
                                            <span class="days-count @(daysLeft <= 7 ? "warning" : "")">@daysLeft días</span>
                                        }
                                    </span>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="no-plan">
                            <div class="no-plan-icon">
                                <i class="fas fa-exclamation-triangle"></i>
                            </div>
                            <h4>Sin Plan Activo</h4>
                            <p>Selecciona un plan para desbloquear todas las funcionalidades</p>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <a href="@Url.Action("Index", "Plans")" class="btn btn-primary btn-block">
                        <i class="fas fa-sync-alt me-2"></i>
                        @(subscription != null ? "Cambiar Plan" : "Seleccionar Plan")
                    </a>
                </div>
            </div>

            <!-- Tarjeta de Uso del Plan REAL -->
            @if (subscription != null && subscription.Plan != null)
            {
                <div class="dashboard-card usage-card">
                    <div class="card-header">
                        <h3 class="card-title">
                            <i class="fas fa-chart-pie me-2"></i>
                            Uso del Plan
                        </h3>
                    </div>
                    <div class="card-body">
                        <div class="usage-stats">
                            <div class="usage-item">
                                <div class="usage-label">
                                    <i class="fas fa-exchange-alt me-2"></i>
                                    <span>Transacciones</span>
                                </div>
                                <div class="usage-bar">
                                    @{
                                        var transactionUsagePercent = subscription.Plan.MaxTransactions > 0 ? 
                                            Math.Min((transactionUsage.current * 100) / subscription.Plan.MaxTransactions, 100) : 0;
                                    }
                                    <div class="usage-fill @(transactionUsagePercent >= 80 ? "warning" : "")" 
                                         style="width: @transactionUsagePercent%"
                                         title="@transactionUsage.current de @subscription.Plan.MaxTransactions transacciones usadas">
                                    </div>
                                </div>
                                <div class="usage-value">
                                    @transactionUsage.current/@subscription.Plan.MaxTransactions
                                </div>
                            </div>
                            
                            <div class="usage-item">
                                <div class="usage-label">
                                    <i class="fas fa-wallet me-2"></i>
                                    <span>Presupuestos</span>
                                </div>
                                <div class="usage-bar">
                                    @{
                                        var budgetUsagePercent = subscription.Plan.MaxBudgets > 0 ? 
                                            Math.Min((budgetUsage.current * 100) / subscription.Plan.MaxBudgets, 100) : 0;
                                    }
                                    <div class="usage-fill @(budgetUsagePercent >= 80 ? "warning" : "")" 
                                         style="width: @budgetUsagePercent%"
                                         title="@budgetUsage.current de @subscription.Plan.MaxBudgets presupuestos usados">
                                    </div>
                                </div>
                                <div class="usage-value">
                                    @budgetUsage.current/@subscription.Plan.MaxBudgets
                                </div>
                            </div>
                            
                            <div class="usage-item">
                                <div class="usage-label">
                                    <i class="fas fa-tasks me-2"></i>
                                    <span>Hábitos</span>
                                </div>
                                <div class="usage-bar">
                                    @{
                                        var habitUsagePercent = subscription.Plan.MaxHabits > 0 ? 
                                            Math.Min((habitUsage.current * 100) / subscription.Plan.MaxHabits, 100) : 0;
                                    }
                                    <div class="usage-fill @(habitUsagePercent >= 80 ? "warning" : "")" 
                                         style="width: @habitUsagePercent%"
                                         title="@habitUsage.current de @subscription.Plan.MaxHabits hábitos usados">
                                    </div>
                                </div>
                                <div class="usage-value">
                                    @habitUsage.current/@(subscription.Plan.MaxHabits >= 9999 ? "∞" : subscription.Plan.MaxHabits.ToString())
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

            <!-- Tarjeta de Resumen Financiero REAL -->
            <div class="dashboard-card stats-card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-chart-line me-2"></i>
                        Resumen Financiero
                    </h3>
                    <a href="@Url.Action("Index", "Finance")" class="btn btn-link btn-sm">Ver Detalles</a>
                </div>
                <div class="card-body">
                    @if (financeSummary != null && financeSummary.TotalTransactions > 0)
                    {
                        <div class="stats-grid">
                            <div class="stat-item">
                                <div class="stat-icon income">
                                    <i class="fas fa-arrow-up"></i>
                                </div>
                                <div class="stat-content">
                                    <span class="stat-number">@financeSummary.TotalIncome.ToString("C")</span>
                                    <span class="stat-label">Ingresos</span>
                                    @if (financeSummary.IncomeGrowth > 0)
                                    {
                                        <span class="stat-trend positive">+@financeSummary.IncomeGrowth.ToString("N1")%</span>
                                    }
                                </div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-icon expense">
                                    <i class="fas fa-arrow-down"></i>
                                </div>
                                <div class="stat-content">
                                    <span class="stat-number">@financeSummary.TotalExpenses.ToString("C")</span>
                                    <span class="stat-label">Gastos</span>
                                    @if (financeSummary.ExpenseGrowth != 0)
                                    {
                                        <span class="stat-trend @(financeSummary.ExpenseGrowth > 0 ? "negative" : "positive")">
                                            @(financeSummary.ExpenseGrowth > 0 ? "+" : "")@financeSummary.ExpenseGrowth.ToString("N1")%
                                        </span>
                                    }
                                </div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-icon @(financeSummary.NetAmount >= 0 ? "balance-positive" : "balance-negative")">
                                    <i class="fas fa-balance-scale"></i>
                                </div>
                                <div class="stat-content">
                                    <span class="stat-number">@financeSummary.NetAmount.ToString("C")</span>
                                    <span class="stat-label">Balance</span>
                                    <span class="stat-trend @(financeSummary.NetAmount >= 0 ? "positive" : "negative")">
                                        @(financeSummary.NetAmount >= 0 ? "Positivo" : "Negativo")
                                    </span>
                                </div>
                            </div>
                        </div>
                        
                        @if (hasBudgetAlerts)
                        {
                            <div class="alert alert-warning mt-3">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                Tienes presupuestos cerca de su límite
                            </div>
                        }
                    }
                    else
                    {
                        <div class="no-data">
                            <i class="fas fa-chart-line fa-2x mb-2"></i>
                            <p>No hay datos financieros</p>
                            <a href="@Url.Action("CreateTransaction", "Finance")" class="btn btn-outline-primary btn-sm mt-2">
                                <i class="fas fa-plus me-1"></i>Agregar Transacción
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Columna Derecha - Módulos y Contenido -->
        <div class="dashboard-main">
            <!-- Tarjeta de Módulos Disponibles -->
            <div class="dashboard-card modules-card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-th-large me-2"></i>
                        Módulos Disponibles
                    </h3>
                </div>
                <div class="card-body">
                    <div class="modules-grid">
                        <!-- Módulo de Hábitos -->
                        <div class="module-item">
                            <div class="module-icon habit-icon">
                                <i class="fas fa-tasks"></i>
                            </div>
                            <div class="module-content">
                                <h4>Gestión de Hábitos</h4>
                                <p>Crea y sigue tus rutinas diarias para construir hábitos positivos</p>
                                <div class="module-stats">
                                    <span class="stat"><i class="fas fa-check-circle"></i> @activeHabitsCount activos</span>
                                    <span class="stat"><i class="fas fa-fire"></i> Racha: @currentStreak días</span>
                                </div>
                                <div class="module-progress">
                                    <div class="progress-text">Progreso semanal: @weeklyProgress%</div>
                                    <div class="progress-bar">
                                        <div class="progress-fill" style="width: @weeklyProgress%"></div>
                                    </div>
                                </div>
                            </div>
                            <a href="@Url.Action("Index", "Habits")" class="btn btn-module">
                                <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                        
                        <!-- Módulo de Finanzas -->
                        <div class="module-item">
                            <div class="module-icon finance-icon">
                                <i class="fas fa-wallet"></i>
                            </div>
                            <div class="module-content">
                                <h4>Control Financiero</h4>
                                <p>Gestiona tus ingresos, gastos y alcanza tus metas financieras</p>
                                <div class="module-stats">
                                    <span class="stat">
                                        <i class="fas fa-exchange-alt"></i> 
                                        @(financeSummary?.TotalTransactions ?? 0) transacciones
                                    </span>
                                    <span class="stat">
                                        <i class="fas fa-chart-line"></i> 
                                        @((financeSummary?.NetAmount ?? 0) >= 0 ? "Positivo" : "Negativo")
                                    </span>
                                </div>
                                <div class="module-progress">
                                    <div class="progress-text">Meta mensual: @(financeSummary?.MonthlyGoalProgress?.ToString("N0") ?? "0")%</div>
                                    <div class="progress-bar">
                                        <div class="progress-fill" style="width: @(financeSummary?.MonthlyGoalProgress ?? 0)%"></div>
                                    </div>
                                </div>
                            </div>
                            <a href="@Url.Action("Index", "Finance")" class="btn btn-module">
                                <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                        
                        <!-- Módulo de Salud -->
                        <div class="module-item">
                            <div class="module-icon health-icon">
                                <i class="fas fa-heartbeat"></i>
                            </div>
                            <div class="module-content">
                                <h4>Seguimiento de Salud</h4>
                                <p>Monitorea tu actividad física, alimentación y bienestar mental</p>
                                <div class="module-stats">
                                    <span class="stat"><i class="fas fa-running"></i> @healthActivitiesCount actividades</span>
                                    <span class="stat"><i class="fas fa-apple-alt"></i> @mealsTracked comidas</span>
                                </div>
                                <div class="module-progress">
                                    <div class="progress-text">Objetivo diario: @dailyHealthGoal%</div>
                                    <div class="progress-bar">
                                        <div class="progress-fill" style="width: @dailyHealthGoal%"></div>
                                    </div>
                                </div>
                            </div>
                            <a href="@Url.Action("Index", "Health")" class="btn btn-module">
                                <i class="fas fa-arrow-right"></i>
                            </a>
                        </div>
                        
                        <!-- Módulo de Comunidad -->
                        <div class="module-item @(ShouldShowCommunity(subscription) ? "" : "module-disabled")">
                            <div class="module-icon community-icon">
                                <i class="fas fa-users"></i>
                            </div>
                            <div class="module-content">
                                <h4>Comunidad</h4>
                                <p>Conecta con otros usuarios, comparte progresos y motívate</p>
                                <div class="module-stats">
                                    @if (ShouldShowCommunity(subscription))
                                    {
                                        <span class="stat"><i class="fas fa-user-friends"></i> @communityMembers miembros</span>
                                        <span class="stat"><i class="fas fa-comments"></i> @activeDiscussions discusiones</span>
                                    }
                                    else
                                    {
                                        <span class="stat premium-badge">
                                            <i class="fas fa-crown me-1"></i> Requiere Plan Premium
                                        </span>
                                    }
                                </div>
                                @if (ShouldShowCommunity(subscription))
                                {
                                    <div class="module-progress">
                                        <div class="progress-text">Actividad: @communityActivity%</div>
                                        <div class="progress-bar">
                                            <div class="progress-fill" style="width: @communityActivity%"></div>
                                        </div>
                                    </div>
                                }
                            </div>
                            @if (ShouldShowCommunity(subscription))
                            {
                                <a href="@Url.Action("Index", "Community")" class="btn btn-module">
                                    <i class="fas fa-arrow-right"></i>
                                </a>
                            }
                            else
                            {
                                <a href="@Url.Action("Index", "Plans")" class="btn btn-module disabled" title="Actualiza tu plan para acceder a la comunidad">
                                    <i class="fas fa-lock"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <!-- Tarjeta de Actividad Reciente -->
            <div class="dashboard-card activity-card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-history me-2"></i>
                        Actividad Reciente
                        @{
                            var transactions = ViewBag.RecentTransactions as List<LifeHub.Models.Entities.FinancialTransaction>;
                            var hasTransactions = transactions != null && transactions.Any();
                            var transactionCountDebug = transactions?.Count ?? 0;
                        }
                        
                        @if (hasTransactions)
                        {
                            <span class="badge bg-primary ms-2">@transactionCountDebug</span>
                        }
                    </h3>
                    <a href="@Url.Action("Transactions", "Finance")" class="btn btn-link btn-sm">Ver Todo</a>
                </div>
                <div class="card-body">
                    <div class="activity-list">
                        @if (hasTransactions)
                        {
                            foreach (var transaction in transactions.Take(5))
                            {
                                <div class="activity-item">
                                    <div class="activity-icon @(transaction.TransactionType == 0 ? "success" : "info")">
                                        <i class="fas fa-@(transaction.TransactionType == 0 ? "arrow-up" : "arrow-down")"></i>
                                    </div>
                                    <div class="activity-content">
                                        <p class="mb-1"><strong>@transaction.Description</strong></p>
                                        <div class="activity-meta">
                                            <span class="activity-amount @(transaction.TransactionType == 0 ? "text-success" : "text-info")">
                                                @(transaction.TransactionType == 0 ? "+" : "-")@transaction.Amount.ToString("C")
                                            </span>
                                            <span class="activity-category">• @(transaction.Category ?? "General")</span>
                                            <span class="activity-date">• @transaction.TransactionDate.ToString("dd/MM HH:mm")</span>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else if (financeSummary?.TotalTransactions > 0)
                        {
                            <div class="no-data">
                                <i class="fas fa-exclamation-triangle fa-2x mb-2 text-warning"></i>
                                <h6>Problema al cargar transacciones</h6>
                                <p class="small text-muted mb-2">
                                    El resumen reporta @financeSummary.TotalTransactions transacciones, pero no se pudieron cargar los detalles.
                                </p>
                                <div class="mt-2">
                                    <a href="@Url.Action("Transactions", "Finance")" class="btn btn-primary btn-sm me-2">
                                        <i class="fas fa-exchange-alt me-1"></i>Ver Transacciones
                                    </a>
                                    <a href="@Url.Action("CreateTransaction", "Finance")" class="btn btn-outline-primary btn-sm">
                                        <i class="fas fa-plus me-1"></i>Nueva Transacción
                                    </a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="no-data">
                                <i class="fas fa-history fa-2x mb-2"></i>
                                <h6>No hay actividad reciente</h6>
                                <p class="small text-muted mb-3">
                                    Comienza registrando tus primeras transacciones financieras
                                </p>
                                <a href="@Url.Action("CreateTransaction", "Finance")" class="btn btn-primary btn-sm">
                                    <i class="fas fa-plus me-1"></i>Crear Primera Transacción
                                </a>
                            </div>
                        }
                    </div>
                    
                    @if (hasTransactions)
                    {
                        <div class="text-center mt-3">
                            <a href="@Url.Action("Transactions", "Finance")" class="btn btn-outline-primary btn-sm me-2">
                                <i class="fas fa-exchange-alt me-1"></i>Ver Todas las Transacciones
                            </a>
                            <a href="@Url.Action("CreateTransaction", "Finance")" class="btn btn-outline-secondary btn-sm">
                                <i class="fas fa-plus me-1"></i>Nueva Transacción
                            </a>
                        </div>
                    }
                </div>
            </div>

            <!-- ✅ NUEVA UBICACIÓN: Sección de Hábitos Favoritos en Dashboard -->
            <div class="dashboard-card favorites-dashboard-card">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-star me-2"></i>
                        Hábitos Favoritos
                    </h3>
                    <a href="@Url.Action("Index", "Habits")" class="btn btn-link btn-sm">Ver Todos</a>
                </div>
                <div class="card-body">
                    <div class="favorites-dashboard-grid" id="dashboardFavorites">
                        <!-- Los favoritos se cargarán con JavaScript -->
                    </div>
                    <div class="no-favorites-dashboard" id="noDashboardFavorites">
                        <i class="fas fa-star fa-2x mb-2"></i>
                        <p>No tienes hábitos favoritos</p>
                        <a href="@Url.Action("Index", "Habits")" class="btn btn-outline-primary btn-sm">
                            <i class="fas fa-plus me-1"></i>Gestionar Hábitos
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Contenedor Principal */
        .dashboard-container {
            min-height: 100vh;
            background: #f8fafc;
            padding: 2rem;
        }

        /* Header del Dashboard */
        .dashboard-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            padding: 0 1rem;
        }

        .header-content {
            flex: 1;
        }

        .dashboard-title {
            font-size: 2.5rem;
            font-weight: 800;
            color: #1e293b;
            margin-bottom: 0.5rem;
            background: linear-gradient(135deg, #4361ee, #3a0ca3);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
        }

        .dashboard-subtitle {
            font-size: 1.2rem;
            color: #64748b;
            margin: 0;
        }

        .user-badge {
            display: flex;
            align-items: center;
            padding: 0.75rem 1.5rem;
            background: white;
            border-radius: 50px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            color: #64748b;
            font-weight: 500;
        }

        .user-badge i {
            color: #4361ee;
            font-size: 1.2rem;
        }

        /* ✅ NUEVO: Estilos para Favoritos en Dashboard */
        .favorites-dashboard-card {
            margin-bottom: 2rem;
        }

        .favorites-dashboard-grid {
            display: grid;
