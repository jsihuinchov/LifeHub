@model LifeHub.Models.ViewModels.MedicalAppointmentViewModel
@{
    ViewData["Title"] = "Nueva Cita M√©dica";
}

<div class="health-container">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="dashboard-title">
                <i class="fas fa-calendar-plus me-2"></i>Nueva Cita M√©dica
            </h1>
            <p class="dashboard-subtitle">Programa una nueva consulta m√©dica</p>
        </div>
        <div class="nav-buttons">
            <a href="@Url.Action("Index", "Health")" class="btn btn-outline-primary me-2">
                <i class="fas fa-arrow-left me-1"></i>Dashboard
            </a>
            <a href="@Url.Action("Appointments", "Health")" class="btn btn-outline-secondary">
                <i class="fas fa-list me-1"></i>Ver Todas
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-calendar-alt me-2"></i>Informaci√≥n de la Cita</h5>
                </div>
                <div class="card-body">
                    <form id="createAppointmentForm" method="post" asp-action="CreateAppointment">
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Title" class="form-label">T√≠tulo de la Cita *</label>
                                    <input asp-for="Title" class="form-control" placeholder="Ej: Consulta cardiolog√≠a, Control anual..." required>
                                    <span asp-validation-for="Title" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DoctorName" class="form-label">Nombre del M√©dico</label>
                                    <input asp-for="DoctorName" class="form-control" placeholder="Ej: Dr. Juan P√©rez">
                                    <span asp-validation-for="DoctorName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Specialty" class="form-label">Especialidad</label>
                                    <input asp-for="Specialty" class="form-control" placeholder="Ej: Cardiolog√≠a, Pediatr√≠a...">
                                    <span asp-validation-for="Specialty" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Location" class="form-label">Ubicaci√≥n</label>
                                    <input asp-for="Location" class="form-control" placeholder="Ej: Hospital Central, Cl√≠nica...">
                                    <span asp-validation-for="Location" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="AppointmentDate" class="form-label">Fecha y Hora *</label>
                                    <input asp-for="AppointmentDate" type="datetime-local" class="form-control" required>
                                    <span asp-validation-for="AppointmentDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Duration" class="form-label">Duraci√≥n (minutos) *</label>
                                    <input asp-for="Duration" type="number" class="form-control" min="1" value="30" required>
                                    <span asp-validation-for="Duration" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="HealthConcerns" class="form-label">Motivo de la Consulta</label>
                            <textarea asp-for="HealthConcerns" class="form-control" rows="3" 
                                      placeholder="Describe los s√≠ntomas o problemas de salud que quieres discutir..."></textarea>
                            <span asp-validation-for="HealthConcerns" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="QuestionsForDoctor" class="form-label">Preguntas para el M√©dico</label>
                            <textarea asp-for="QuestionsForDoctor" class="form-control" rows="3" 
                                      placeholder="Prepara preguntas espec√≠ficas para tu m√©dico..."></textarea>
                            <span asp-validation-for="QuestionsForDoctor" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label">Notas Adicionales</label>
                            <textarea asp-for="Notes" class="form-control" rows="3" 
                                      placeholder="Instrucciones especiales, documentos a llevar..."></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a href="@Url.Action("Appointments", "Health")" class="btn btn-outline-secondary me-md-2">
                                <i class="fas fa-times me-1"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Guardar Cita
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <!-- PANEL DE PREPARACI√ìN -->
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h6 class="mb-0"><i class="fas fa-checklist me-2"></i>üìã Lista de Preparaci√≥n</h6>
                </div>
                <div class="card-body">
                    <div class="preparation-list">
                        <div class="preparation-item">
                            <input type="checkbox" class="form-check-input" id="prep1">
                            <label class="form-check-label small" for="prep1">Documentos m√©dicos</label>
                        </div>
                        <div class="preparation-item">
                            <input type="checkbox" class="form-check-input" id="prep2">
                            <label class="form-check-label small" for="prep2">Lista de medicamentos</label>
                        </div>
                        <div class="preparation-item">
                            <input type="checkbox" class="form-check-input" id="prep3">
                            <label class="form-check-label small" for="prep3">Resultados de ex√°menes</label>
                        </div>
                        <div class="preparation-item">
                            <input type="checkbox" class="form-check-input" id="prep4">
                            <label class="form-check-label small" for="prep4">Preguntas preparadas</label>
                        </div>
                        <div class="preparation-item">
                            <input type="checkbox" class="form-check-input" id="prep5">
                            <label class="form-check-label small" for="prep5">Tarjeta de seguro</label>
                        </div>
                    </div>
                </div>
            </div>

            <!-- RECORDATORIOS -->
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0"><i class="fas fa-bell me-2"></i>‚è∞ Recordatorios</h6>
                </div>
                <div class="card-body">
                    <div class="reminders">
                        <div class="reminder-item">
                            <i class="fas fa-clock text-warning me-2"></i>
                            <span class="small">Llega 15 minutos antes</span>
                        </div>
                        <div class="reminder-item">
                            <i class="fas fa-file-medical text-primary me-2"></i>
                            <span class="small">Lleva documentos importantes</span>
                        </div>
                        <div class="reminder-item">
                            <i class="fas fa-question-circle text-success me-2"></i>
                            <span class="small">Prepara tus preguntas</span>
                        </div>
                        <div class="reminder-item">
                            <i class="fas fa-pills text-danger me-2"></i>
                            <span class="small">Lista de medicamentos actual</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Establecer fecha y hora m√≠nima como la actual
        document.addEventListener('DOMContentLoaded', function() {
            const now = new Date();
            const localDateTime = new Date(now.getTime() - now.getTimezoneOffset() * 60000).toISOString().slice(0, 16);
            document.getElementById('AppointmentDate').min = localDateTime;
        });

        // Validaci√≥n de fecha futura
        document.getElementById('createAppointmentForm').addEventListener('submit', function(e) {
            const appointmentDate = new Date(document.getElementById('AppointmentDate').value);
            const now = new Date();
            
            if (appointmentDate <= now) {
                e.preventDefault();
                alert('Por favor, selecciona una fecha y hora futura para la cita.');
                return false;
            }
        });
    </script>
}

<style>
    .health-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 20px;
    }

    .dashboard-title {
        color: #2c3e50;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .dashboard-subtitle {
        color: #7f8c8d;
        font-size: 1.1rem;
    }

    .nav-buttons {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }

    .card {
        border: none;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        border-radius: 12px 12px 0 0 !important;
        font-weight: 600;
    }

    .preparation-list {
        display: flex;
        flex-direction: column;
        gap: 10px;
    }

    .preparation-item {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .reminders {
        display: flex;
        flex-direction: column;
        gap: 12px;
    }

    .reminder-item {
        display: flex;
        align-items: center;
        padding-bottom: 8px;
        border-bottom: 1px solid #e9ecef;
    }

    .reminder-item:last-child {
        border-bottom: none;
    }

    @@media (max-width: 768px) {
        .nav-buttons {
            flex-direction: column;
            width: 100%;
        }
        
        .nav-buttons .btn {
            width: 100%;
            margin-bottom: 5px;
        }
    }
</style>