@{
    ViewData["Title"] = "Asistente de Salud - Chatbot";
    var appointmentId = ViewBag.AppointmentId as int?;
}

<div class="container-fluid h-100">
    <div class="row h-100">
        <!-- Sidebar con informaci√≥n del usuario -->
        <div class="col-md-3 d-none d-md-block bg-light p-4 border-end">
