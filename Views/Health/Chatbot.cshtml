                            <small class="text-muted" id="connectionStatus">
                                <i class="fas fa-circle text-success me-1"></i>En l√≠nea
                            </small>
                        </div>
                    </div>
                    <div class="d-flex gap-2">
                        <button id="clearChat" class="btn btn-outline-secondary btn-sm" title="Limpiar conversaci√≥n">
                            <i class="fas fa-broom"></i>
                        </button>
                        <button id="toggleSidebar" class="btn btn-outline-secondary btn-sm d-md-none" title="Informaci√≥n">
                            <i class="fas fa-info"></i>
                        </button>
