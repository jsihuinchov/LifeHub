            </div>

            <!-- Contenedor de mensajes -->
            <div id="chatMessages" class="chat-messages flex-grow-1 p-3">
                <!-- Mensajes se cargar√°n aqu√≠ din√°micamente -->
            </div>

            <!-- Indicador de escritura -->
            <div id="typingIndicator" class="typing-indicator p-3" style="display: none;">
                <div class="d-flex align-items-center text-muted">
                    <div class="typing-dots me-2">
                        <span></span>
                        <span></span>
                        <span></span>
                    </div>
                    <small>El asistente est√° escribiendo...</small>
                </div>
            </div>

            <!-- √Årea de entrada -->
            <div class="chat-input-container bg-white border-top p-3">
                <div class="input-group">
                    <input type="text" 
                           id="messageInput" 
                           class="form-control border-0" 
                           placeholder="Escribe tu mensaje o pregunta de salud..." 
                           maxlength="1000"
                           autocomplete="off">
                    <button id="sendButton" class="btn btn-primary rounded-circle" disabled>
                        <i class="fas fa-paper-plane"></i>
                    </button>
                </div>
                
                <!-- Sugerencias r√°pidas -->
                <div id="quickSuggestions" class="mt-2">
                    <div class="d-flex flex-wrap gap-1">
                        <button class="btn btn-outline-secondary btn-sm suggestion-btn" data-message="¬øQu√© puedo hacer para mejorar mi sue√±o?">
                            üí§ Sue√±o
                        </button>
                        <button class="btn btn-outline-secondary btn-sm suggestion-btn" data-message="¬øC√≥mo manejar el estr√©s?">
                            üòå Estr√©s
                        </button>
                        <button class="btn btn-outline-secondary btn-sm suggestion-btn" data-message="Recomendaciones de alimentaci√≥n saludable">
                            ü•ó Alimentaci√≥n
                        </button>
                        <button class="btn btn-outline-secondary btn-sm suggestion-btn" data-message="¬øQu√© ejercicios son buenos para...?">
                            üèÉ Ejercicio
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal para informaci√≥n de usuario (mobile) -->
<div class="modal fade" id="mobileSidebarModal" tabindex="-1">
    <div class="modal-dialog modal-fullscreen">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Tu Informaci√≥n</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="mobileUserContext">
                    <!-- Contenido din√°mico -->
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let currentAppointmentId = @(appointmentId?.ToString() ?? "null");
        let conversationHistory = [];

        document.addEventListener('DOMContentLoaded', function() {
            const chatMessages = document.getElementById('chatMessages');
            const messageInput = document.getElementById('messageInput');
            const sendButton = document.getElementById('sendButton');
            const typingIndicator = document.getElementById('typingIndicator');
            const clearChat = document.getElementById('clearChat');
            const userContext = document.getElementById('userContext');
            const mobileUserContext = document.getElementById('mobileUserContext');
            const toggleSidebar = document.getElementById('toggleSidebar');
            const mobileSidebarModal = new bootstrap.Modal('#mobileSidebarModal');

            // Inicializar chat
            initializeChat();
            loadUserContext();

            // Event listeners
            messageInput.addEventListener('input', updateSendButton);
            messageInput.addEventListener('keypress', handleKeyPress);
            sendButton.addEventListener('click', sendMessage);
            clearChat.addEventListener('click', clearConversation);
            toggleSidebar.addEventListener('click', () => mobileSidebarModal.show());

            // Sugerencias r√°pidas
            document.querySelectorAll('.suggestion-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    messageInput.value = this.dataset.message;
                    sendMessage();
                });
            });

            // Acciones de sidebar
            document.querySelectorAll('.quick-sidebar-action').forEach(btn => {
                btn.addEventListener('click', function() {
                    handleQuickAction(this.dataset.action);
                });
            });

            function initializeChat() {
                const welcomeMessage = `¬°Hola! Soy tu asistente de salud personal ü§ñ

Estoy aqu√≠ para ayudarte con cualquier pregunta o inquietud sobre tu salud. Puedes preguntarme sobre:

‚Ä¢ ü©∫ **S√≠ntomas y condiciones**
‚Ä¢ üíä **Medicamentos y tratamientos**  
‚Ä¢ ü•ó **Nutrici√≥n y estilo de vida**
‚Ä¢ üò¥ **Sue√±o y bienestar mental**
‚Ä¢ üìÖ **Preparaci√≥n de citas m√©dicas**

¬øEn qu√© puedo asistirte hoy?`;

                showBotMessage(welcomeMessage, [
                    { text: 'üìÖ Preparar cita', action: 'start_appointment' },
                    { text: 'üíä Mis medicamentos', action: 'view_medications' },
                    { text: 'üìù Registrar salud', action: 'record_health' },
                    { text: 'ü©∫ Pregunta general', action: 'health_question' }
                ]);
            }

            async function loadUserContext() {
                try {
                    // Simular carga de contexto del usuario
                    setTimeout(() => {
                        const contextHtml = `
                            <div class="context-item mb-2">
                                <i class="fas fa-calendar-check text-success me-2"></i>
                                <span>1 cita pr√≥xima</span>
                            </div>
                            <div class="context-item mb-2">
                                <i class="fas fa-pills text-info me-2"></i>
                                <span>2 medicamentos activos</span>
                            </div>
                            <div class="context-item">
                                <i class="fas fa-heart text-danger me-2"></i>
                                <span>√öltimo registro: Hoy</span>
                            </div>
                        `;
                        userContext.innerHTML = contextHtml;
                        mobileUserContext.innerHTML = contextHtml;
                    }, 1000);
                } catch (error) {
                    console.error('Error loading user context:', error);
                }
            }

            function updateSendButton() {
                const hasText = messageInput.value.trim().length > 0;
                sendButton.disabled = !hasText;
            }

            function handleKeyPress(e) {
                if (e.key === 'Enter' && !e.shiftKey) {
                    e.preventDefault();
                    sendMessage();
                }
            }

            async function sendMessage() {
                const message = messageInput.value.trim();
                if (!message) return;

                // Limpiar y deshabilitar entrada
                messageInput.value = '';
                updateSendButton();
                messageInput.disabled = true;
                sendButton.disabled = true;

                // Mostrar mensaje del usuario
                showUserMessage(message);
                showTypingIndicator();

                try {
                    const response = await fetchWithTimeout('@Url.Action("SendMessage", "Health")', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ message: message })
                    }, 30000); // 30 segundos timeout

                    const data = await response.json();
                    hideTypingIndicator();

                    if (data.success) {
                        showBotMessage(data.response.message, data.response.quickActions);
                    } else {
                        showErrorMessage(data.error || 'Error procesando tu mensaje. Por favor, intenta de nuevo.');
                    }
                } catch (error) {
                    hideTypingIndicator();
                    if (error.name === 'TimeoutError') {
                        showErrorMessage('La respuesta est√° tardando m√°s de lo esperado. Por favor, intenta con una pregunta m√°s espec√≠fica.');
                    } else {
                        showErrorMessage('Error de conexi√≥n. Por favor, verifica tu internet e intenta de nuevo.');
                    }
                } finally {
                    // Rehabilitar entrada
                    messageInput.disabled = false;
                    messageInput.focus();
                }
            }

            async function fetchWithTimeout(url, options, timeout) {
                const controller = new AbortController();
                const timeoutId = setTimeout(() => controller.abort(), timeout);

                try {
                    const response = await fetch(url, {
                        ...options,
                        signal: controller.signal
                    });
                    clearTimeout(timeoutId);
                    return response;
                } catch (error) {
                    clearTimeout(timeoutId);
                    if (error.name === 'AbortError') {
                        throw new Error('TimeoutError');
                    }
                    throw error;
                }
            }

            function showUserMessage(message) {
                const messageDiv = createMessageElement('user', message);
                chatMessages.appendChild(messageDiv);
                scrollToBottom();
                
                // Agregar al historial
                conversationHistory.push({ type: 'user', content: message });
            }

            function showBotMessage(message, quickActions = []) {
                const messageDiv = createMessageElement('bot', message);
                chatMessages.appendChild(messageDiv);
                scrollToBottom();

                // Mostrar acciones r√°pidas si las hay
                if (quickActions && quickActions.length > 0) {
                    showQuickActions(quickActions);
                }
                
                // Agregar al historial
                conversationHistory.push({ type: 'bot', content: message });
            }

            function createMessageElement(type, content) {
                const messageDiv = document.createElement('div');
                messageDiv.className = `message ${type}-message`;
                
                const avatar = type === 'user' ? 
                    '<i class="fas fa-user"></i>' : 
                    '<i class="fas fa-robot"></i>';
                
                const timestamp = new Date().toLocaleTimeString('es-ES', { 
                    hour: '2-digit', 
                    minute: '2-digit' 
                });

                messageDiv.innerHTML = `
                    <div class="message-avatar ${type}">
                        ${avatar}
                    </div>
                    <div class="message-content">
                        <div class="message-bubble">
                            <div class="message-text">${formatMessage(content)}</div>
                            <div class="message-time">${timestamp}</div>
                        </div>
                    </div>
                `;

                return messageDiv;
            }

            function showQuickActions(actions) {
                // Limpiar acciones anteriores
                const existingActions = document.querySelector('.quick-actions-container');
                if (existingActions) {
                    existingActions.remove();
                }

                const actionsContainer = document.createElement('div');
                actionsContainer.className = 'quick-actions-container mt-2';

                actions.forEach(action => {
                    const button = document.createElement('button');
                    button.className = 'btn btn-outline-primary btn-sm me-2 mb-2 quick-action';
                    button.innerHTML = action.text;
                    button.onclick = () => handleQuickAction(action.action);
                    actionsContainer.appendChild(button);
                });

                chatMessages.appendChild(actionsContainer);
                scrollToBottom();
            }

            function handleQuickAction(action) {
                if (action.startsWith('prepare_appointment:')) {
                    const appointmentId = parseInt(action.split(':')[1]);
                    startAppointmentPreparation(appointmentId);
                } else if (action === 'start_appointment') {
                    window.location.href = '@Url.Action("Appointments", "Health")';
                } else if (action === 'view_medications' || action === 'manage_medications') {
                    window.location.href = '@Url.Action("Medications", "Health")';
                } else if (action === 'view_appointments') {
                    window.location.href = '@Url.Action("Appointments", "Health")';
                } else if (action === 'record_health') {
                    window.location.href = '@Url.Action("Diary", "Health")';
                } else if (action === 'view_patterns') {
                    window.location.href = '@Url.Action("HealthPatterns", "Health")';
                } else if (action === 'go_dashboard') {
                    window.location.href = '@Url.Action("Index", "Health")';
                } else {
                    // Para acciones de conversaci√≥n, enviar como mensaje
                    messageInput.value = action;
                    sendMessage();
                }
            }

            async function startAppointmentPreparation(appointmentId) {
                showTypingIndicator();
                
                try {
                    const response = await fetch('@Url.Action("StartAppointmentPreparation", "Health")', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        body: JSON.stringify({ appointmentId: appointmentId })
                    });

                    const data = await response.json();
                    hideTypingIndicator();

                    if (data.success) {
                        showBotMessage(data.response.message, data.response.quickActions);
                    // Ocultar sugerencias cuando estamos en modo preparaci√≥n
                        document.getElementById('quickSuggestions').style.display = 'none';
                    } else {
                        showErrorMessage('Error al preparar la cita. Por favor, intenta de nuevo.');
                    }
                } catch (error) {
                    hideTypingIndicator();
                    showErrorMessage('Error de conexi√≥n al preparar la cita.');
                }
            }

            function clearConversation() {
                if (conversationHistory.length === 0) return;
                
                if (confirm('¬øEst√°s seguro de que quieres limpiar toda la conversaci√≥n?')) {
                    chatMessages.innerHTML = '';
                    conversationHistory = [];
                    document.getElementById('quickSuggestions').style.display = 'block';
                    initializeChat();
                }
            }

            function showTypingIndicator() {
                typingIndicator.style.display = 'block';
                scrollToBottom();
            }

            function hideTypingIndicator() {
                typingIndicator.style.display = 'none';
            }

            function scrollToBottom() {
                chatMessages.scrollTop = chatMessages.scrollHeight;
            }

            function formatMessage(text) {
                // Formato mejorado de markdown
                return escapeHtml(text)
                    .replace(/\*\*(.*?)\*\*/g, '<strong>$1</strong>')
                    .replace(/\*(.*?)\*/g, '<em>$1</em>')
                    .replace(/```([^`]+)```/g, '<pre><code>$1</code></pre>')
                    .replace(/`([^`]+)`/g, '<code>$1</code>')
                    .replace(/\n/g, '<br>');
            }

            function escapeHtml(unsafe) {
                return unsafe
                    .replace(/&/g, "&amp;")
                    .replace(/</g, "&lt;")
                    .replace(/>/g, "&gt;")
                    .replace(/"/g, "&quot;")
                    .replace(/'/g, "&#039;");
            }

            function showErrorMessage(message) {
                const errorDiv = document.createElement('div');
                errorDiv.className = 'alert alert-warning alert-dismissible fade show mt-2';
                errorDiv.innerHTML = `
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    ${message}
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                `;
                chatMessages.appendChild(errorDiv);
                scrollToBottom();
                
                // Auto-remover despu√©s de 5 segundos
                setTimeout(() => {
                    if (errorDiv.parentNode) {
                        errorDiv.remove();
                    }
                }, 5000);
            }
        });
    </script>

