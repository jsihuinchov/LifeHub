        <!-- √Årea principal del chat -->
        <div class="col-md-9 col-12 d-flex flex-column" style="height: 100vh;">
            <!-- Header del chat -->
            <div class="chat-header bg-white border-bottom p-3">
                <div class="d-flex justify-content-between align-items-center">
