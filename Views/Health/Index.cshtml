    <!-- SECCI√ìN 1: ESTADO ACTUAL (LO M√ÅS IMPORTANTE PRIMERO) -->
    <div class="row mb-4">
        <!-- ESTADO DE HOY -->
        <div class="col-lg-8">
            <div class="card daily-check-card mb-4">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-calendar-day me-2"></i>Mi D√≠a de Hoy
                        <small class="fs-6 ms-2">@DateTime.Now.ToString("dddd, dd MMMM yyyy")</small>
                    </h5>
                    <div>
                        @if (Model.TodayCheck != null)
                        {
                            <a href="@Url.Action("Diary", "Health")" class="btn btn-sm btn-light">
                                <i class="fas fa-edit me-1"></i>Actualizar
                            </a>
                        }
                        else
                        {
                            <a href="@Url.Action("Diary", "Health")" class="btn btn-sm btn-light">
                                <i class="fas fa-plus me-1"></i>Registrar
                            </a>
                        }
                    </div>
                </div>
                
                <div class="card-body">
                    @if (Model.TodayCheck != null)
                    {
                        <div class="today-summary">
                            <div class="row text-center mb-4">
                                <div class="col-4">
                                    <div class="today-stat">
                                        <div class="stat-value">
                                            @switch (Model.TodayCheck.GeneralWellness)
                                            {
                                                case LifeHub.Models.Entities.WellnessLevel.Excelente:
                                                    <span class="text-success">üòä Excelente</span>
                                                    break;
                                                case LifeHub.Models.Entities.WellnessLevel.Bueno:
                                                    <span class="text-info">üôÇ Bueno</span>
                                                    break;
                                                case LifeHub.Models.Entities.WellnessLevel.Regular:
                                                    <span class="text-warning">üòê Regular</span>
                                                    break;
                                                case LifeHub.Models.Entities.WellnessLevel.Malo:
                                                    <span class="text-danger">üòî Malo</span>
                                                    break;
                                                case LifeHub.Models.Entities.WellnessLevel.Terrible:
                                                    <span class="text-danger">üò´ Terrible</span>
                                                    break;
                                            }
                                        </div>
                                        <div class="stat-label">Estado General</div>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="today-stat">
                                        <div class="stat-value text-primary">
                                            @Model.TodayCheck.EnergyLevel<small>/10</small>
                                        </div>
                                        <div class="stat-label">Nivel de Energ√≠a</div>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="today-stat">
                                        <div class="stat-value text-info">
                                            @Model.TodayCheck.SleepQuality<small>/10</small>
                                        </div>
                                        <div class="stat-label">Calidad de Sue√±o</div>
                                    </div>
                                </div>
                            </div>

                            @if (Model.TodayCheck.SelectedSymptoms.Any())
                            {
                                <div class="symptoms-today mb-3">
                                    <h6><i class="fas fa-exclamation-circle me-2 text-warning"></i>S√≠ntomas Reportados</h6>
                                    <div class="symptoms-tags mt-2">
                                        @foreach (var symptom in Model.TodayCheck.SelectedSymptoms)
                                        {
                                            <span class="symptom-tag">
                                                @switch(symptom.ToString())
                                                {
                                                    case "Headache": <text>ü§ï Dolor cabeza</text>; break;
                                                    case "Fatigue": <text>üò¥ Fatiga</text>; break;
                                                    case "Nausea": <text>ü§¢ N√°useas</text>; break;
                                                    case "Palpitations": <text>üíì Palpitaciones</text>; break;
                                                    case "Fever": <text>ü§í Fiebre</text>; break;
                                                    case "LossOfAppetite": <text>üçΩÔ∏è Falta apetito</text>; break;
                                                    case "Anxiety": <text>üò∞ Ansiedad</text>; break;
                                                    case "Depression": <text>üòû Depresi√≥n</text>; break;
                                                    case "SleepProblems": <text>üí§ Problemas sue√±o</text>; break;
                                                    case "JointPain": <text>ü¶µ Dolor articular</text>; break;
                                                    case "Dizziness": <text>üåÄ Mareos</text>; break;
                                                    case "Other": <text>üìù Otro</text>; break;
                                                }
                                            </span>
                                        }
                                    </div>
                                </div>
                            }

                            @if (!string.IsNullOrEmpty(Model.TodayCheck.QuickNote))
                            {
                                <div class="quick-note-today">
                                    <h6><i class="fas fa-sticky-note me-2 text-info"></i>Nota del D√≠a</h6>
                                    <p class="mb-0 p-2 bg-light rounded">"@Model.TodayCheck.QuickNote"</p>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-clipboard-list fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">¬øC√≥mo est√°s hoy?</h5>
                            <p class="text-muted mb-4">T√≥mate 2 minutos para registrar tu estado y obtener insights personalizados</p>
                            <a href="@Url.Action("Diary", "Health")" class="btn btn-primary btn-lg">
                                <i class="fas fa-plus me-2"></i>Registrar Mi D√≠a
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- PANEL LATERAL: RESUMEN Y ACCIONES -->
        <div class="col-lg-4">
            <!-- RESUMEN SEMANAL -->
            <div class="card stats-card mb-4">
                <div class="card-header bg-info text-white">
                    <h6 class="mb-0"><i class="fas fa-chart-line me-2"></i>üìä Resumen de la Semana</h6>
                </div>
                <div class="card-body">
                    <div class="weekly-stats">
                        <div class="stat-item">
                            <div class="stat-number text-primary">@Model.CurrentStreak</div>
                            <div class="stat-label">D√≠as consecutivos</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-number text-success">@Model.AverageEnergy</div>
                            <div class="stat-label">Energ√≠a promedio</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-number text-info">@Model.AverageSleepQuality</div>
                            <div class="stat-label">Sue√±o promedio</div>
                        </div>
                        <div class="stat-item">
                            <div class="stat-value">
                                @switch (Model.MostCommonWellness)
                                {
                                    case LifeHub.Models.Entities.WellnessLevel.Excelente:
                                        <span class="text-success">üòä</span>
                                        break;
                                    case LifeHub.Models.Entities.WellnessLevel.Bueno:
                                        <span class="text-info">üôÇ</span>
                                        break;
                                    case LifeHub.Models.Entities.WellnessLevel.Regular:
                                        <span class="text-warning">üòê</span>
                                        break;
                                    case LifeHub.Models.Entities.WellnessLevel.Malo:
                                        <span class="text-danger">üòî</span>
                                        break;
                                    case LifeHub.Models.Entities.WellnessLevel.Terrible:
                                        <span class="text-danger">üò´</span>
                                        break;
                                }
                            </div>
                            <div class="stat-label">Estado com√∫n</div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- ACCIONES R√ÅPIDAS -->
            <div class="card quick-actions-card mb-4">
                <div class="card-header bg-success text-white">
                    <h6 class="mb-0"><i class="fas fa-bolt me-2"></i>‚ö° Acciones R√°pidas</h6>
                </div>
                <div class="card-body">
                    <div class="quick-actions-grid">
                        <a href="@Url.Action("CreateMedication", "Health")" class="quick-action-btn">
                            <i class="fas fa-pills"></i>
                            <span>Agregar Medicamento</span>
                        </a>
                        <a href="@Url.Action("CreateAppointment", "Health")" class="quick-action-btn">
                            <i class="fas fa-calendar-plus"></i>
                            <span>Nueva Cita</span>
                        </a>
                        <a href="@Url.Action("History", "Health")" class="quick-action-btn">
                            <i class="fas fa-history"></i>
                            <span>Ver Historial</span>
                        </a>
                        <a href="@Url.Action("MedicalReport", "Health")" class="quick-action-btn">
                            <i class="fas fa-file-medical"></i>
                            <span>Reporte M√©dico</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- SECCI√ìN 2: ALERTAS Y RECOMENDACIONES -->
    @if (Model.HealthInsights.Any() || Model.LowStockMedications.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <div class="card focus-card">
                    <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                        <h5 class="mb-0"><i class="fas fa-bullhorn me-2"></i>üéØ Atenci√≥n y Recomendaciones</h5>
                        <small>Actualizado hoy</small>
                    </div>
                    <div class="card-body">
                        <!-- Insights de Salud -->
                        @if (Model.HealthInsights.Any())
                        {
                            <div class="mb-3">
                                <h6><i class="fas fa-lightbulb me-2 text-info"></i>Insights de Tu Salud</h6>
                                <div class="insights-grid">
                                    @foreach (var insight in Model.HealthInsights)
                                    {
                                        <div class="insight-item">
                                            @Html.Raw(insight)
                                        </div>
                                    }
                                </div>
                            </div>
                        }

                        <!-- Alertas de Medicamentos -->
                        @if (Model.LowStockMedications.Any())
                        {
                            <div>
                                <h6><i class="fas fa-exclamation-triangle me-2 text-danger"></i>Acciones Necesarias</h6>
                                <div class="alert-items">
                                    @foreach (var med in Model.LowStockMedications)
                                    {
                                        <div class="alert-item">
                                            <strong>@med.Name</strong> - Solo quedan @med.TotalQuantity unidades
                                            @if (med.TotalQuantity <= med.LowStockAlert)
                                            {
                                                <span class="badge bg-danger ms-2">¬°Stock cr√≠tico!</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning ms-2">Stock bajo</span>
                                            }
                                        </div>
                                    }
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- SECCI√ìN 3: HERRAMIENTAS PRINCIPALES -->
    <div class="row mb-4">
        <div class="col-12">
            <h3 class="section-title">
                <i class="fas fa-toolbox me-2"></i>üõ†Ô∏è Mis Herramientas de Salud
            </h3>
            
            <div class="row">
                <!-- DIARIO Y SEGUIMIENTO -->
                <div class="col-md-4 mb-3">
                    <div class="card tool-card">
                        <div class="card-body text-center">
                            <div class="tool-icon mb-3">
                                <i class="fas fa-book-medical fa-3x text-primary"></i>
                            </div>
                            <h5 class="card-title">Diario de Salud</h5>
                            <p class="card-text text-muted small">Registro diario de s√≠ntomas, energ√≠a y bienestar</p>
                            <div class="tool-links mt-3">
                                <a href="@Url.Action("Diary", "Health")" class="btn btn-outline-primary btn-sm me-2">
                                    <i class="fas fa-edit"></i> Registrar
                                </a>
                                <a href="@Url.Action("History", "Health")" class="btn btn-outline-info btn-sm">
                                    <i class="fas fa-history"></i> Historial
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- MEDICAMENTOS -->
                <div class="col-md-4 mb-3">
                    <div class="card tool-card">
                        <div class="card-body text-center">
                            <div class="tool-icon mb-3">
                                <i class="fas fa-pills fa-3x text-success"></i>
                            </div>
                            <h5 class="card-title">Gesti√≥n de Medicamentos</h5>
                            <p class="card-text text-muted small">Control de stock, recordatorios y seguimiento</p>
                            <div class="tool-links mt-3">
                                <a href="@Url.Action("Medications", "Health")" class="btn btn-outline-success btn-sm me-2">
                                    <i class="fas fa-list"></i> Ver Todos
                                </a>
                                <a href="@Url.Action("CreateMedication", "Health")" class="btn btn-success btn-sm">
                                    <i class="fas fa-plus"></i> Agregar
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- CITAS M√âDICAS -->
                <div class="col-md-4 mb-3">
                    <div class="card tool-card">
                        <div class="card-body text-center">
                            <div class="tool-icon mb-3">
                                <i class="fas fa-calendar-check fa-3x text-primary"></i>
                            </div>
                            <h5 class="card-title">Citas M√©dicas</h5>
                            <p class="card-text text-muted small">Agenda, recordatorios y preparaci√≥n</p>
                            <div class="tool-links mt-3">
                                <a href="@Url.Action("Appointments", "Health")" class="btn btn-outline-primary btn-sm me-2">
                                    <i class="fas fa-list"></i> Ver Citas
                                </a>
                                <a href="@Url.Action("CreateAppointment", "Health")" class="btn btn-primary btn-sm">
                                    <i class="fas fa-plus"></i> Nueva
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- SECCI√ìN 4: AN√ÅLISIS Y REPORTES -->
    <div class="row">
        <div class="col-12">
            <h3 class="section-title">
                <i class="fas fa-chart-bar me-2 text-info"></i>üìà An√°lisis y Reportes
                <small class="text-muted fs-6">Informaci√≥n detallada de tu salud</small>
            </h3>
            
            <div class="row">
                <!-- PATRONES DE SALUD -->
                <div class="col-md-6 mb-3">
                    <div class="card analysis-feature-card">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="feature-icon me-3">
                                    <i class="fas fa-project-diagram fa-2x text-info"></i>
                                </div>
                                <div>
                                    <h5 class="card-title mb-1">Patrones de Salud</h5>
                                    <p class="card-text text-muted small mb-0">Descubre tendencias en tu bienestar</p>
                                </div>
                            </div>
                            <div class="analysis-feature-description">
                                <p class="small text-muted mb-3">
                                    üìä <strong>Analiza patrones</strong> en tus s√≠ntomas, niveles de energ√≠a y calidad de sue√±o para entender mejor tu salud.
                                </p>
                                <div class="d-grid">
                                    <a href="@Url.Action("HealthPatterns", "Health")" class="btn btn-info">
                                        <i class="fas fa-chart-line me-2"></i>Ver Patrones
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- REPORTES M√âDICOS -->
                <div class="col-md-6 mb-3">
                    <div class="card analysis-feature-card">
                        <div class="card-body">
                            <div class="d-flex align-items-center mb-3">
                                <div class="feature-icon me-3">
                                    <i class="fas fa-file-medical fa-2x text-primary"></i>
                                </div>
                                <div>
                                    <h5 class="card-title mb-1">Reportes M√©dicos</h5>
                                    <p class="card-text text-muted small mb-0">Res√∫menes completos de tu salud</p>
                                </div>
                            </div>
                            <div class="analysis-feature-actions">
                                <div class="row g-2">
                                    <div class="col-6">
                                        <a href="@Url.Action("MedicalReport", "Health")" class="btn btn-outline-primary btn-sm w-100">
                                            <i class="fas fa-file-pdf me-1"></i>Reporte
                                        </a>
                                    </div>
                                    <div class="col-6">
                                        <a href="@Url.Action("Stats", "Health")" class="btn btn-outline-success btn-sm w-100">
                                            <i class="fas fa-chart-bar me-1"></i>Estad√≠sticas
                                        </a>
                                    </div>
                                    <div class="col-12 mt-2">
                                        <a href="@Url.Action("Insights", "Health")" class="btn btn-outline-warning btn-sm w-100">
                                            <i class="fas fa-lightbulb me-1"></i>Insights
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- SECCI√ìN 5: VISTA R√ÅPIDA DE DATOS -->
    <div class="row mt-4">
        <!-- MEDICAMENTOS ACTIVOS -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h6 class="mb-0"><i class="fas fa-pills me-2"></i>üíä Medicamentos Activos</h6>
                    <span class="badge bg-light text-success">@Model.ActiveMedications.Count</span>
                </div>
                <div class="card-body">
                    @if (Model.ActiveMedications.Any())
                    {
                        <div class="medication-list">
                            @foreach (var med in Model.ActiveMedications.Take(4))
                            {
                                <div class="medication-item d-flex justify-content-between align-items-center p-2 border-bottom">
                                    <div class="flex-grow-1">
                                        <strong class="d-block">@med.Name</strong>
                                        <small class="text-muted">@med.Dosage - @med.Frequency</small>
                                    </div>
                                    <div class="text-end">
                                        @if (med.TotalQuantity <= med.LowStockAlert)
                                        {
                                            <span class="badge bg-danger">@med.TotalQuantity</span>
                                            <small class="d-block text-danger">Stock bajo</small>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">@med.TotalQuantity</span>
                                            <small class="d-block text-muted">restantes</small>
                                        }
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="mt-3">
                            <a href="@Url.Action("Medications", "Health")" class="btn btn-outline-success btn-sm w-100">
                                <i class="fas fa-list me-1"></i>Gestionar Todos los Medicamentos
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="fas fa-pills fa-2x text-muted mb-2"></i>
                            <p class="text-muted mb-2">No hay medicamentos activos</p>
                            <a href="@Url.Action("CreateMedication", "Health")" class="btn btn-success btn-sm">
                                <i class="fas fa-plus me-1"></i>Agregar Primer Medicamento
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- PR√ìXIMAS CITAS -->
        <div class="col-md-6 mb-4">
            <div class="card h-100">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h6 class="mb-0"><i class="fas fa-calendar me-2"></i>üìÖ Pr√≥ximas Citas</h6>
                    <span class="badge bg-light text-primary">@Model.UpcomingAppointments.Count</span>
                </div>
                <div class="card-body">
                    @if (Model.UpcomingAppointments.Any())
                    {
                        <div class="appointment-list">
                            @foreach (var appointment in Model.UpcomingAppointments.Take(3))
                            {
                                <div class="appointment-item p-2 border-bottom">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <strong class="d-block">@appointment.Title</strong>
                                            <small class="text-muted d-block">
                                                <i class="fas fa-user-md me-1"></i>
                                                @(appointment.DoctorName ?? "Doctor no especificado")
                                            </small>
                                            <small class="text-muted">
                                                <i class="fas fa-clock me-1"></i>
                                                @appointment.AppointmentDate.ToString("dd/MM/yyyy HH:mm")
                                            </small>
                                        </div>
                                        <div class="text-end">
                                            <a href="@Url.Action("AppointmentPreparation", "Health", new { id = appointment.Id })" 
                                               class="btn btn-sm btn-outline-primary" title="Preparar cita">
                                                <i class="fas fa-clipboard-check"></i>
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                        <div class="mt-3">
                            <a href="@Url.Action("Appointments", "Health")" class="btn btn-outline-primary btn-sm w-100">
                                <i class="fas fa-list me-1"></i>Ver Todas las Citas
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-3">
                            <i class="fas fa-calendar-plus fa-2x text-muted mb-2"></i>
                            <p class="text-muted mb-2">No hay citas programadas</p>
                            <a href="@Url.Action("CreateAppointment", "Health")" class="btn btn-primary btn-sm">
                                <i class="fas fa-plus me-1"></i>Programar Primera Cita
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .wellness-dashboard {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        .dashboard-title {
            color: #2c3e50;
            font-weight: 700;
            margin-bottom: 0.5rem;
            font-size: 2.2rem;
        }

        .dashboard-subtitle {
            color: #7f8c8d;
            font-size: 1.1rem;
            font-weight: 400;
        }

        .section-title {
            color: #2c3e50;
            border-bottom: 2px solid #3498db;
            padding-bottom: 12px;
            margin-bottom: 25px;
            font-weight: 600;
        }

        /* Tarjetas de herramientas */
        .tool-card {
            border: none;
            border-radius: 12px;
            transition: all 0.3s ease;
            background: white;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
            height: 100%;
        }

        .tool-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0,0,0,0.15);
        }

        .tool-icon {
            transition: transform 0.3s ease;
        }

        .tool-card:hover .tool-icon {
            transform: scale(1.1);
        }

