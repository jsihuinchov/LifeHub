                    <i class="fas fa-plus me-1"></i>Registrar D√≠a
                </a>
                <a href="@Url.Action("CreateAppointment", "Health")" class="btn btn-success">
                    <i class="fas fa-calendar-plus me-1"></i>Nueva Cita
                </a>
