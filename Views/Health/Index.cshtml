@model LifeHub.Models.ViewModels.HealthDashboardViewModel
@{
    ViewData["Title"] = "Dashboard de Salud";
}

<div class="health-dashboard container-fluid py-4">

    <!-- 🔹 ENCABEZADO -->
    <div class="dashboard-header d-flex justify-content-between align-items-center flex-wrap mb-4">
        <div>
            <h1 class="dashboard-title mb-1">
                <i class="fas fa-heartbeat text-danger me-2"></i> Tu Bienestar
            </h1>
            <p class="text-muted mb-0">Monitorea tu salud, citas y medicamentos en un solo espacio 💊</p>
        </div>

        <div class="d-flex flex-wrap gap-2 mt-3 mt-md-0">
            <a href="@Url.Action("CreateAppointment")" class="btn btn-primary-gradient">
                <i class="fas fa-calendar-plus me-1"></i> Nueva Cita
            </a>
            <a href="@Url.Action("CreateMedication")" class="btn btn-success-gradient">
                <i class="fas fa-pills me-1"></i> Nuevo Medicamento
            </a>
        </div>
    </div>

    <!-- 🔹 ALERTAS -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success shadow-sm alert-modern">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger shadow-sm alert-modern">
            <i class="fas fa-exclamation-circle me-2"></i>@TempData["ErrorMessage"]
        </div>
    }

    <!-- 🔹 ESTADÍSTICAS -->
    <div class="row g-3 mb-4">
        <div class="col-6 col-md-3">
            <div class="stats-card bg-gradient-primary">
                <i class="fas fa-calendar-check"></i>
                <div>
                    <h3>@Model.Stats.TotalAppointments</h3>
                    <p>Citas Totales</p>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="stats-card bg-gradient-warning">
                <i class="fas fa-clock"></i>
                <div>
                    <h3>@Model.Stats.UpcomingAppointments</h3>
                    <p>Próximas</p>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="stats-card bg-gradient-success">
                <i class="fas fa-pills"></i>
                <div>
                    <h3>@Model.Stats.ActiveMedications</h3>
                    <p>Medicamentos</p>
                </div>
            </div>
        </div>
        <div class="col-6 col-md-3">
            <div class="stats-card bg-gradient-info">
                <i class="fas fa-check-double"></i>
                <div>
                    <h3>@Model.Stats.CompletedAppointments</h3>
                    <p>Completadas</p>
                </div>
            </div>
        </div>
    </div>

    <!-- 🔹 CONTENIDO PRINCIPAL -->
    <div class="row g-4">
        <!-- Próximas Citas -->
        <div class="col-lg-6">
            <div class="card dashboard-card">
                <div class="card-header">
                    <h5><i class="fas fa-calendar-day me-2 text-primary"></i>Próximas Citas</h5>
                    <a href="@Url.Action("Appointments")" class="small text-decoration-none">Ver todas</a>
                </div>
                <div class="card-body">
                    @if (Model.UpcomingAppointments.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var appointment in Model.UpcomingAppointments.Take(5))
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>@appointment.Title</strong><br />
                                        <small class="text-muted">
                                            <i class="fas fa-clock me-1"></i>@appointment.AppointmentDate.ToString("dd/MM/yyyy HH:mm")
                                        </small>
                                    </div>
                                    <a href="@Url.Action("EditAppointment", new { id = appointment.Id })" class="btn btn-outline-primary btn-sm rounded-pill">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fas fa-calendar-times fa-2x mb-2 text-muted"></i>
                            <p>No hay citas próximas</p>
                            <a href="@Url.Action("CreateAppointment")" class="btn btn-primary btn-sm">+ Crear Cita</a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Medicamentos -->
        <div class="col-lg-6">
            <div class="card dashboard-card">
                <div class="card-header">
                    <h5><i class="fas fa-pills me-2 text-success"></i>Medicamentos Activos</h5>
                    <a href="@Url.Action("Medications")" class="small text-decoration-none">Ver todos</a>
                </div>
                <div class="card-body">
                    @if (Model.ActiveMedications.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var medication in Model.ActiveMedications.Take(5))
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div>
                                        <strong>@medication.Name</strong><br />
                                        <small class="text-muted">@medication.Dosage - @medication.Frequency</small>
                                    </div>
                                    <a href="@Url.Action("EditMedication", new { id = medication.Id })" class="btn btn-outline-success btn-sm rounded-pill">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <div class="empty-state">
                            <i class="fas fa-pills fa-2x mb-2 text-muted"></i>
                            <p>No hay medicamentos activos</p>
                            <a href="@Url.Action("CreateMedication")" class="btn btn-success btn-sm">+ Agregar Medicamento</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- 🔹 ACCIONES RÁPIDAS -->
    <div class="quick-actions mt-4">
        <h4 class="text-primary fw-bold mb-3">
            <i class="bi bi-rocket-takeoff-fill me-2 text-primary"></i> Acciones Rápidas
        </h4>
        <div class="d-flex flex-wrap gap-2">
            <a href="@Url.Action("CreateAppointment")" class="btn btn-outline-primary btn-quick">
                <i class="bi bi-calendar-plus me-1"></i> Nueva Cita
            </a>
            <a href="@Url.Action("CreateMedication")" class="btn btn-outline-success btn-quick">
                <i class="bi bi-capsule-pill me-1"></i> Nuevo Medicamento
            </a>
            <a href="@Url.Action("Appointments")" class="btn btn-outline-info btn-quick">
                <i class="bi bi-list-task me-1"></i> Ver Citas
            </a>
            <a href="@Url.Action("Medications")" class="btn btn-outline-warning btn-quick">
                <i class="bi bi-prescription2 me-1"></i> Ver Medicamentos
            </a>
            <a href="@Url.Action("Stats")" class="btn btn-outline-danger btn-quick">
                <i class="bi bi-bar-chart-line me-1"></i> Estadísticas
            </a>
        </div>
    </div>
</div>


<style>
/* ======= CONTENEDOR ======= */
.health-dashboard {
    background: linear-gradient(180deg, #f8fbff, #ffffff);
    min-height: 100vh;
    font-family: "Poppins", sans-serif;
}

/* ======= ENCABEZADO ======= */
.dashboard-title {
    font-weight: 700;
    font-size: 2rem;
    color: #1a2a6c;
}

/* ======= BOTONES GRADIENTE ======= */
.btn-primary-gradient {
    background: linear-gradient(135deg, #4facfe, #00f2fe);
    color: #fff !important;
    border: none;
    border-radius: 12px;
    padding: 10px 22px;
    font-weight: 600;
}
.btn-success-gradient {
    background: linear-gradient(135deg, #43cea2, #185a9d);
    color: #fff !important;
    border: none;
    border-radius: 12px;
    padding: 10px 22px;
    font-weight: 600;
}

/* ======= ALERTAS ======= */
.alert-modern {
    border-radius: 14px;
    font-weight: 500;
}

/* ======= TARJETAS DE ESTADÍSTICAS ======= */
.stats-card {
    border-radius: 16px;
    padding: 18px;
    display: flex;
    align-items: center;
    gap: 16px;
    color: #fff;
    box-shadow: 0 5px 15px rgba(0,0,0,0.1);
}
.stats-card i {
    font-size: 2rem;
}
.stats-card h3 {
    margin: 0;
    font-weight: 700;
}

/* ======= TARJETAS ======= */
.dashboard-card {
    border: none;
    border-radius: 18px;
    box-shadow: 0 5px 20px rgba(0,0,0,0.05);
}
.card-header {
    background: #f9fafc;
    font-weight: 600;
}

/* ======= ESTADOS VACÍOS ======= */
.empty-state {
    text-align: center;
    padding: 40px 0;
    color: #888;
}

/* ======= ACCIONES RÁPIDAS ======= */
.quick-actions {
    background: #fff;
    border-radius: 18px;
    padding: 25px;
    box-shadow: 0 3px 12px rgba(0, 0, 0, 0.05);
}
.btn-quick {
    border-radius: 10px;
    font-weight: 600;
    padding: 10px 18px;
    transition: all 0.25s ease;
    display: inline-flex;
    align-items: center;
    justify-content: center;
}
.btn-quick i {
    font-size: 1.1rem;
}
.btn-quick:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 10px rgba(0,0,0,0.08);
}

/* ======= GRADIENTES ======= */
.bg-gradient-primary { background: linear-gradient(135deg, #3a8ef6, #005bea); }
.bg-gradient-warning { background: linear-gradient(135deg, #f7971e, #ffd200); }
.bg-gradient-success { background: linear-gradient(135deg, #43cea2, #185a9d); }
.bg-gradient-info { background: linear-gradient(135deg, #36d1dc, #5b86e5); }

/* ======= RESPONSIVE ======= */
@@media (max-width: 768px) {
    .dashboard-title { font-size: 1.6rem; text-align: center; }
    .stats-card { flex-direction: column; text-align: center; }
}
</style>
