@model LifeHub.Models.ViewModels.HabitStatsViewModel
@{
    ViewData["Title"] = "Estadísticas de Hábitos";
}

<div class="stats-container">
    <!-- Header Mejorado -->
    <div class="stats-header">
        <div class="header-content">
            <div class="title-section">
                <h1 class="stats-title">
                    <i class="fas fa-chart-line me-3"></i>
                    Estadísticas de Hábitos
                </h1>
                <p class="stats-subtitle">Visualiza tu progreso y optimiza tu rutina diaria</p>
            </div>
            <div class="header-stats">
                <div class="header-stat">
                    <span class="header-stat-value">@Model.TotalHabits</span>
                    <span class="header-stat-label">Hábitos Totales</span>
                </div>
                <div class="header-stat">
                    <span class="header-stat-value">@Model.ActiveHabits</span>
                    <span class="header-stat-label">Activos</span>
                </div>
            </div>
        </div>
        <div class="header-actions">
            <a href="@Url.Action("Index")" class="btn btn-back">
                <i class="fas fa-arrow-left me-2"></i>Volver a Hábitos
            </a>
        </div>
    </div>

    <!-- Resumen Principal Mejorado -->
    <div class="main-stats-grid">
        <div class="main-stat-card streak-card">
            <div class="card-glow"></div>
            <div class="stat-content">
                <div class="stat-icon">
                    <i class="fas fa-fire"></i>
                </div>
                <div class="stat-info">
                    <span class="stat-value">@Model.CurrentStreak</span>
                    <span class="stat-label">Racha Actual</span>
                    <div class="stat-meta">
                        <span class="stat-emoji">@Model.StreakEmoji</span>
                        <span class="stat-trend">Máx: @Model.LongestStreak días</span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="main-stat-card completion-card">
            <div class="card-glow"></div>
            <div class="stat-content">
                <div class="stat-icon">
                    <i class="fas fa-percentage"></i>
                </div>
                <div class="stat-info">
                    <span class="stat-value">@Model.CompletionRateFormatted</span>
                    <span class="stat-label">Tasa de Completación</span>
                    <div class="stat-meta">
                        <span class="stat-trend @(Model.ImprovementRate >= 0 ? "positive" : "negative")">
                            <i class="fas fa-arrow-@(Model.ImprovementRate >= 0 ? "up" : "down") me-1"></i>
                            @Math.Abs(Model.ImprovementRate).ToString("N1")%
                        </span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="main-stat-card total-card">
            <div class="card-glow"></div>
            <div class="stat-content">
                <div class="stat-icon">
                    <i class="fas fa-tasks"></i>
                </div>
                <div class="stat-info">
                    <span class="stat-value">@Model.TotalCompletions</span>
                    <span class="stat-label">Total Completados</span>
                    <div class="stat-meta">
                        <span class="stat-detail">@Model.TodayCompletions hoy</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Grid de Estadísticas Detalladas Mejorado -->
    <div class="detailed-stats-grid">
        <!-- Actividad por Período Mejorado -->
        <div class="stat-section activity-section">
            <div class="section-header">
                <h3 class="section-title">
                    <i class="fas fa-calendar-week me-2"></i>
                    Actividad por Período
                </h3>
                <div class="section-actions">
                    <span class="time-badge">Actualizado hoy</span>
                </div>
            </div>
            <div class="period-stats">
                <div class="period-stat">
                    <div class="period-icon">
                        <i class="fas fa-sun"></i>
                    </div>
                    <div class="period-info">
                        <span class="period-value">@Model.TodayCompletions</span>
                        <span class="period-label">Hoy</span>
                    </div>
                </div>
                <div class="period-stat">
                    <div class="period-icon">
                        <i class="fas fa-calendar-week"></i>
                    </div>
                    <div class="period-info">
                        <span class="period-value">@Model.WeekCompletions</span>
                        <span class="period-label">Esta Semana</span>
                    </div>
                </div>
                <div class="period-stat">
                    <div class="period-icon">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                    <div class="period-info">
                        <span class="period-value">@Model.MonthCompletions</span>
                        <span class="period-label">Este Mes</span>
                    </div>
                </div>
                <div class="period-stat">
                    <div class="period-icon">
                        <i class="fas fa-trophy"></i>
                    </div>
                    <div class="period-info">
                        <span class="period-value">@Model.LongestStreak</span>
                        <span class="period-label">Racha Más Larga</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Consistencia Mejorada -->
        <div class="stat-section consistency-section">
            <div class="section-header">
                <h3 class="section-title">
                    <i class="fas fa-chart-line me-2"></i>
                    Consistencia
                </h3>
            </div>
            <div class="consistency-stats">
                <div class="consistency-stat">
                    <div class="consistency-header">
                        <span class="consistency-label">Consistencia Semanal</span>
                        <span class="consistency-value">@Model.WeeklyConsistency.ToString("N1")%</span>
                    </div>
                    <div class="consistency-bar">
                        <div class="consistency-fill" style="width: @Model.WeeklyConsistency%">
                            <div class="consistency-glow"></div>
                        </div>
                    </div>
                </div>
                <div class="consistency-stat">
                    <div class="consistency-header">
                        <span class="consistency-label">Semanas Perfectas</span>
                        <span class="consistency-value">@Model.PerfectWeeks</span>
                    </div>
                    <div class="consistency-badge @(Model.PerfectWeeks > 0 ? "perfect" : "standard")">
                        <i class="fas @(Model.PerfectWeeks > 0 ? "fa-star" : "fa-calendar") me-1"></i>
                        @Model.PerfectWeeks logradas
                    </div>
                </div>
                <div class="consistency-stat">
                    <div class="consistency-header">
                        <span class="consistency-label">Tendencia</span>
                        <span class="consistency-value @(Model.ImprovementRate >= 0 ? "positive" : "negative")">
                            @(Model.ImprovementRate >= 0 ? "+" : "")@Model.ImprovementRate.ToString("N1")%
                        </span>
                    </div>
                    <div class="trend-indicator @(Model.ImprovementRate >= 0 ? "up" : "down")">
                        <i class="fas fa-arrow-@(Model.ImprovementRate >= 0 ? "up" : "down")"></i>
                        @(Model.ImprovementRate >= 0 ? "Mejorando" : "Por mejorar")
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Segunda Fila Mejorada -->
    <div class="detailed-stats-grid">
        @if (Model.TopCategories.Any())
        {
            <div class="stat-section categories-section">
                <div class="section-header">
                    <h3 class="section-title">
                        <i class="fas fa-tags me-2"></i>
                        Categorías Populares
                    </h3>
                </div>
                <div class="categories-stats">
                    @{
                        var maxCategoryValue = Model.TopCategories.Values.Max();
                    }
                    @foreach (var category in Model.TopCategories.OrderByDescending(c => c.Value))
                    {
                        var percentage = (category.Value * 100) / maxCategoryValue;
                        <div class="category-stat">
                            <div class="category-info">
                                <span class="category-name">@category.Key</span>
                                <span class="category-count">@category.Value</span>
                            </div>
                            <div class="category-bar">
                                <div class="category-fill" style="width: @percentage%">
                                    <div class="category-glow"></div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        <!-- Hábitos Destacados Mejorados -->
        <div class="stat-section highlights-section">
            <div class="section-header">
                <h3 class="section-title">
                    <i class="fas fa-trophy me-2"></i>
                    Hábitos Destacados
                </h3>
            </div>
            <div class="habits-highlights">
                @if (!string.IsNullOrEmpty(Model.MostSuccessfulHabit))
                {
                    <div class="habit-highlight success">
                        <div class="highlight-badge">
                            <i class="fas fa-crown"></i>
                        </div>
                        <div class="highlight-content">
                            <span class="highlight-title">Más Exitoso</span>
                            <span class="highlight-name">@Model.MostSuccessfulHabit</span>
                            <span class="highlight-desc">Tu hábito más consistente</span>
                        </div>
                    </div>
                }
                
                @if (!string.IsNullOrEmpty(Model.MostDifficultHabit))
                {
                    <div class="habit-highlight challenge">
                        <div class="highlight-badge">
                            <i class="fas fa-bullseye"></i>
                        </div>
                        <div class="highlight-content">
                            <span class="highlight-title">Para Mejorar</span>
                            <span class="highlight-name">@Model.MostDifficultHabit</span>
                            <span class="highlight-desc">Oportunidad de crecimiento</span>
                        </div>
                    </div>
                }
                
                @if (!string.IsNullOrEmpty(Model.BestTimeOfDay))
                {
                    <div class="habit-highlight info">
                        <div class="highlight-badge">
                            <i class="fas fa-clock"></i>
                        </div>
                        <div class="highlight-content">
                            <span class="highlight-title">Horario Ideal</span>
                            <span class="highlight-name">@Model.BestTimeOfDay</span>
                            <span class="highlight-desc">Tu momento más productivo</span>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Distribución Semanal Mejorada -->
        @if (Model.WeeklyDistribution != null && Model.WeeklyDistribution.Any())
        {
            <div class="stat-section distribution-section">
                <div class="section-header">
                    <h3 class="section-title">
                        <i class="fas fa-calendar-alt me-2"></i>
                        Distribución Semanal
                    </h3>
                </div>
                <div class="weekly-distribution">
                    @{
                        var dayNames = new Dictionary<string, string>
                        {
                            ["Monday"] = "Lun",
                            ["Tuesday"] = "Mar", 
                            ["Wednesday"] = "Mié",
                            ["Thursday"] = "Jue",
                            ["Friday"] = "Vie",
                            ["Saturday"] = "Sáb",
                            ["Sunday"] = "Dom"
                        };
                        var maxWeekly = Model.WeeklyDistribution.Values.Max();
                    }
                    @foreach (var day in Model.WeeklyDistribution)
                    {
                        var percentage = (day.Value * 100) / maxWeekly;
                        <div class="week-day">
                            <span class="day-name">@dayNames[day.Key]</span>
                            <div class="day-visualization">
                                <div class="day-bar-container">
                                    <div class="day-bar" style="height: @percentage%">
                                        <div class="day-fill"></div>
                                    </div>
                                </div>
                                <span class="day-count">@day.Value</span>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>

    <!-- Gráficos de Tendencia Mejorados -->
    <div class="charts-section">
        <div class="section-header">
            <h3 class="section-title main-title">
                <i class="fas fa-chart-line me-2"></i>
                Tendencias y Progreso
            </h3>
            <div class="chart-actions">
                <button class="chart-btn active" data-chart="weekly">Semanal</button>
                <button class="chart-btn" data-chart="monthly">Mensual</button>
            </div>
        </div>
        <div class="charts-grid">
            <div class="chart-container">
                <div class="chart-header">
                    <h4 class="chart-title">Evolución de Completados</h4>
                    <span class="chart-subtitle">Últimas 8 semanas</span>
                </div>
                <div class="chart-wrapper">
                    <canvas id="weeklyTrendChart"></canvas>
                </div>
            </div>
            
            <div class="chart-container">
                <div class="chart-header">
                    <h4 class="chart-title">Actividad por Día</h4>
                    <span class="chart-subtitle">Promedio semanal</span>
                </div>
                <div class="chart-wrapper">
                    <canvas id="weeklyDistributionChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Consejos Mejorados -->
    <div class="tips-section">
        <div class="section-header">
            <h3 class="section-title">
                <i class="fas fa-lightbulb me-2"></i>
                Recomendaciones Personalizadas
            </h3>
        </div>
        <div class="tips-grid">
            @if (Model.CompletionRate < 50)
            {
                <div class="tip-card warning">
                    <div class="tip-icon">
                        <i class="fas fa-exclamation-triangle"></i>
                    </div>
                    <div class="tip-content">
                        <h4>Enfócate en la Consistencia</h4>
                        <p>Tu tasa de completación es del @Model.CompletionRateFormatted. Establece recordatorios y divide los hábitos en metas más pequeñas.</p>
                        <div class="tip-actions">
                            <span class="tip-priority">Alta prioridad</span>
                        </div>
                    </div>
                </div>
            }
            
            @if (Model.CurrentStreak >= 7)
            {
                <div class="tip-card success">
                    <div class="tip-icon">
                        <i class="fas fa-trophy"></i>
                    </div>
                    <div class="tip-content">
                        <h4>¡Racha Impresionante!</h4>
                        <p>Llevas @Model.CurrentStreak días consecutivos. Los hábitos se están consolidando en tu rutina.</p>
                        <div class="tip-actions">
                            <span class="tip-priority">Buen trabajo</span>
                        </div>
                    </div>
                </div>
            }
            
            @if (Model.TodayCompletions == 0)
            {
                <div class="tip-card info">
                    <div class="tip-icon">
                        <i class="fas fa-calendar-day"></i>
                    </div>
                    <div class="tip-content">
                        <h4>Comienza tu Día</h4>
                        <p>Aún no has completado hábitos hoy. ¡Es el momento perfecto para empezar!</p>
                        <div class="tip-actions">
                            <span class="tip-priority">Acción inmediata</span>
                        </div>
                    </div>
                </div>
            }
            
            @if (Model.WeeklyConsistency < 70)
            {
                <div class="tip-card general">
                    <div class="tip-icon">
                        <i class="fas fa-calendar-week"></i>
                    </div>
                    <div class="tip-content">
                        <h4>Mejora tu Rutina Semanal</h4>
                        <p>Tu consistencia semanal es del @Model.WeeklyConsistency.ToString("N1")%. Intenta establecer horarios fijos.</p>
                        <div class="tip-actions">
                            <span class="tip-priority">Prioridad media</span>
                        </div>
                    </div>
                </div>
            }
            
            @if (Model.ImprovementRate > 0)
            {
                <div class="tip-card success">
                    <div class="tip-icon">
                        <i class="fas fa-chart-line"></i>
                    </div>
                    <div class="tip-content">
                        <h4>Progreso Positivo</h4>
                        <p>Vas mejorando un @Model.ImprovementRate.ToString("N1")%. Mantén este ritmo de crecimiento.</p>
                        <div class="tip-actions">
                            <span class="tip-priority">En buen camino</span>
                        </div>
                    </div>
                </div>
            }
            
            <div class="tip-card general">
                <div class="tip-icon">
                    <i class="fas fa-seedling"></i>
                </div>
                <div class="tip-content">
                    <h4>Construye Progresivamente</h4>
                    <p>Los hábitos se forman con repetición constante. Celebra cada pequeño progreso y sé paciente contigo mismo.</p>
                    <div class="tip-actions">
                        <span class="tip-priority">Consejo general</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* === VARIABLES MEJORADAS === */
        :root {
            --primary-green: #10b981;
            --primary-green-dark: #059669;
            --primary-blue: #3b82f6;
            --primary-blue-dark: #2563eb;
            --primary-purple: #8b5cf6;
            --primary-purple-dark: #7c3aed;
            --primary-orange: #f59e0b;
            --primary-orange-dark: #d97706;
            --primary-red: #ef4444;
            --primary-cyan: #06b6d4;
            
            --gradient-primary: linear-gradient(135deg, var(--primary-green), var(--primary-blue));
            --gradient-secondary: linear-gradient(135deg, var(--primary-purple), var(--primary-cyan));
            --gradient-warning: linear-gradient(135deg, var(--primary-orange), #ea580c);
            
            --gray-50: #f8fafc;
            --gray-100: #f1f5f9;
            --gray-200: #e2e8f0;
            --gray-300: #cbd5e1;
            --gray-400: #94a3b8;
            --gray-500: #64748b;
            --gray-600: #475569;
            --gray-700: #334155;
            --gray-800: #1e293b;
            --gray-900: #0f172a;
            
            --border-radius: 20px;
            --border-radius-lg: 24px;
            --border-radius-md: 16px;
            --border-radius-sm: 12px;
            --border-radius-xs: 8px;
            
            --shadow-sm: 0 2px 12px rgba(0, 0, 0, 0.08);
            --shadow-md: 0 4px 24px rgba(0, 0, 0, 0.12);
            --shadow-lg: 0 8px 40px rgba(0, 0, 0, 0.15);
            --shadow-xl: 0 12px 50px rgba(0, 0, 0, 0.18);
            
            --transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            --transition-slow: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
        }

        .stats-container {
            min-height: 100vh;
            background: linear-gradient(135deg, var(--gray-50) 0%, #f0fdfa 50%, var(--gray-100) 100%);
            padding: 2rem;
            font-family: 'Inter', 'Segoe UI', system-ui, -apple-system, sans-serif;
        }

        /* === HEADER MEJORADO === */
        .stats-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2.5rem;
            background: white;
            padding: 2.5rem;
            border-radius: var(--border-radius-lg);
            box-shadow: var(--shadow-lg);
            border: 1px solid var(--gray-200);
            position: relative;
            overflow: hidden;
        }

        .stats-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: var(--gradient-primary);
        }

        .header-content {
            flex: 1;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .title-section {
            flex: 1;
        }

        .stats-title {
            font-size: 2.5rem;
            font-weight: 800;
            color: var(--gray-900);
            margin-bottom: 0.5rem;
            background: var(--gradient-primary);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            letter-spacing: -0.025em;
        }

        .stats-title i {
            background: var(--gradient-primary);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .stats-subtitle {
            color: var(--gray-600);
            margin: 0;
            font-size: 1.2rem;
            font-weight: 500;
            letter-spacing: -0.01em;
        }

        .header-stats {
            display: flex;
            gap: 2rem;
            margin-left: 2rem;
        }

        .header-stat {
            text-align: center;
        }

        .header-stat-value {
            display: block;
            font-size: 2rem;
            font-weight: 800;
            color: var(--gray-900);
            line-height: 1;
        }

        .header-stat-label {
            display: block;
            font-size: 0.9rem;
            color: var(--gray-500);
            font-weight: 600;
            margin-top: 0.25rem;
        }

        .header-actions {
            margin-left: 2rem;
        }

        .btn-back {
            background: white;
            color: var(--gray-700);
            border: 2px solid var(--gray-300);
            border-radius: var(--border-radius-md);
            padding: 0.875rem 1.5rem;
            font-weight: 600;
            transition: var(--transition);
            text-decoration: none;
            display: inline-flex;
            align-items: center;
        }

        .btn-back:hover {
            background: var(--gray-50);
            border-color: var(--gray-400);
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
            color: var(--gray-800);
        }

        /* === ESTADÍSTICAS PRINCIPALES MEJORADAS === */
        .main-stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2.5rem;
        }

        .main-stat-card {
            border-radius: var(--border-radius-lg);
            padding: 2.5rem;
            box-shadow: var(--shadow-lg);
            border: 1px solid transparent;
            transition: var(--transition-slow);
            position: relative;
            overflow: hidden;
            color: white;
            backdrop-filter: blur(20px);
        }

        .card-glow {
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
            opacity: 0;
            transition: var(--transition-slow);
        }

        .main-stat-card:hover .card-glow {
            opacity: 1;
        }

        .main-stat-card:hover {
            transform: translateY(-8px);
            box-shadow: var(--shadow-xl);
        }

        .streak-card {
            background: linear-gradient(135deg, #f59e0b 0%, #d97706 50%, #b45309 100%);
        }

        .completion-card {
            background: linear-gradient(135deg, var(--primary-purple) 0%, var(--primary-purple-dark) 50%, #6d28d9 100%);
        }

        .total-card {
            background: linear-gradient(135deg, var(--primary-green) 0%, var(--primary-green-dark) 50%, #047857 100%);
        }

        .stat-content {
            display: flex;
            align-items: center;
            gap: 1.5rem;
            position: relative;
            z-index: 2;
        }

        .main-stat-card .stat-icon {
            width: 80px;
            height: 80px;
            background: rgba(255, 255, 255, 0.15);
            border-radius: var(--border-radius-md);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
            flex-shrink: 0;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            transition: var(--transition);
        }

        .main-stat-card:hover .stat-icon {
            transform: scale(1.1);
            background: rgba(255, 255, 255, 0.2);
        }

        .stat-info {
            flex: 1;
        }

        .main-stat-card .stat-value {
            display: block;
            font-size: 3.5rem;
            font-weight: 800;
            line-height: 1;
            margin-bottom: 0.5rem;
            text-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .main-stat-card .stat-label {
            display: block;
            font-size: 1.1rem;
            opacity: 0.9;
            margin-bottom: 0.75rem;
            font-weight: 600;
            letter-spacing: 0.02em;
        }

        .stat-meta {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .stat-emoji {
            font-size: 1.5rem;
            font-weight: 600;
            text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
        }

        .stat-trend {
            display: inline-flex;
            align-items: center;
            gap: 0.25rem;
            font-size: 0.85rem;
