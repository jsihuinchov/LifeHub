@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Datos para los gráficos
            @{
                var weeklyDistributionJson = Model.WeeklyDistribution != null && Model.WeeklyDistribution.Any() 
                    ? System.Text.Json.JsonSerializer.Serialize(Model.WeeklyDistribution)
                    : "{}";
                
                var weeklyTrendData = new Dictionary<string, int>();
                if (ViewBag.WeeklyTrendData != null)
                {
                    weeklyTrendData = ViewBag.WeeklyTrendData as Dictionary<string, int>;
                }
                var weeklyTrendJson = weeklyTrendData.Any() 
                    ? System.Text.Json.JsonSerializer.Serialize(weeklyTrendData)
                    : "{}";
            }
            
            const weeklyDistributionData = @Html.Raw(weeklyDistributionJson);
            const weeklyTrendData = @Html.Raw(weeklyTrendJson);

            // Gráfico de tendencia semanal
            if (weeklyTrendData && Object.keys(weeklyTrendData).length > 0) {
                const trendCtx = document.getElementById('weeklyTrendChart');
                
                new Chart(trendCtx, {
                    type: 'line',
                    data: {
                        labels: Object.keys(weeklyTrendData),
                        datasets: [{
                            label: 'Completados por Semana',
                            data: Object.values(weeklyTrendData),
                            backgroundColor: 'rgba(16, 185, 129, 0.1)',
                            borderColor: 'rgba(16, 185, 129, 1)',
                            borderWidth: 3,
                            fill: true,
                            tension: 0.4,
                            pointBackgroundColor: 'rgba(16, 185, 129, 1)',
                            pointBorderColor: '#fff',
                            pointBorderWidth: 2,
                            pointRadius: 5,
                            pointHoverRadius: 7
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        // DESACTIVAR HOVER EFFECTS PROBLEMÁTICOS
                        interaction: {
                            intersect: false,
                            mode: 'index'
                        },
                        hover: {
                            animationDuration: 0 // Desactiva animaciones de hover
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                grid: {
                                    color: 'rgba(0, 0, 0, 0.1)'
                                }
                            },
                            x: {
                                grid: {
                                    display: false
                                }
                            }
                        },
                        plugins: {
                            legend: {
                                display: false
                            }
                        },
                        // CONFIGURACIÓN ADICIONAL PARA ESTABILIDAD
                        animation: {
                            duration: 1000,
                            onComplete: function() {
                                // Forzar tamaño fijo después de la animación
                                this.resize();
                            }
                        }
                    }
                });
            } else {
                document.getElementById('weeklyTrendChart').closest('.chart-container').style.display = 'none';
            }

            // Gráfico de distribución semanal
            if (weeklyDistributionData && Object.keys(weeklyDistributionData).length > 0) {
                const distributionCtx = document.getElementById('weeklyDistributionChart');
                
                const dayNames = {
                    'Monday': 'Lun',
                    'Tuesday': 'Mar',
                    'Wednesday': 'Mié',
                    'Thursday': 'Jue',
                    'Friday': 'Vie',
                    'Saturday': 'Sáb',
                    'Sunday': 'Dom'
                };

                const labels = Object.keys(weeklyDistributionData).map(key => dayNames[key] || key);

                new Chart(distributionCtx, {
                    type: 'bar',
                    data: {
                        labels: labels,
                        datasets: [{
                            label: 'Completados',
                            data: Object.values(weeklyDistributionData),
                            backgroundColor: 'rgba(59, 130, 246, 0.6)',
                            borderColor: 'rgba(59, 130, 246, 1)',
                            borderWidth: 1,
                            borderRadius: 4
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        // DESACTIVAR HOVER EFFECTS PROBLEMÁTICOS
                        interaction: {
                            intersect: false,
                            mode: 'index'
                        },
                        hover: {
                            animationDuration: 0 // Desactiva animaciones de hover
                        },
                        scales: {
                            y: {
                                beginAtZero: true,
                                grid: {
                                    color: 'rgba(0, 0, 0, 0.1)'
                                }
                            },
                            x: {
                                grid: {
                                    display: false
                                }
                            }
                        },
                        plugins: {
                            legend: {
                                display: false
                            }
                        },
                        // CONFIGURACIÓN ADICIONAL PARA ESTABILIDAD
                        animation: {
                            duration: 1000,
                            onComplete: function() {
                                // Forzar tamaño fijo después de la animación
                                this.resize();
                            }
                        }
                    }
                });
            } else {
                document.getElementById('weeklyDistributionChart').closest('.chart-container').style.display = 'none';
            }

            // Prevenir redimensionamiento continuo
            let resizeTimer;
            window.addEventListener('resize', function() {
                clearTimeout(resizeTimer);
                resizeTimer = setTimeout(function() {
                    // Solo redimensionar una vez después de que termine el resize
                    const charts = Chart.instances;
                    charts.forEach(chart => {
                        chart.resize();
                    });
                }, 250);
            });
        });
    </script>
