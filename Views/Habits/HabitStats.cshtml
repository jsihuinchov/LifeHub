@model LifeHub.Models.ViewModels.HabitDetailStatsViewModel
@{
    ViewData["Title"] = $"Estadísticas - {Model.HabitName}";
}

<div class="stats-container">
    <!-- Header Mejorado -->
    <div class="stats-header">
        <div class="header-content">
            <div class="habit-header">
                <div class="habit-badge" style="background: @Model.HabitColor;">
                    <span class="habit-icon">@Model.HabitIcon</span>
                </div>
                <div class="habit-info">
                    <h1 class="stats-title">@Model.HabitName</h1>
                    <p class="stats-subtitle">Estadísticas detalladas y análisis de progreso</p>
                    <div class="habit-meta">
                        <span class="meta-item">
                            <i class="fas fa-calendar-plus me-1"></i>
                            Desde @Model.StartDate.ToString("dd/MM/yyyy")
                        </span>
                        <span class="meta-item">
                            <i class="fas fa-bullseye me-1"></i>
                            @Model.Frequency veces por semana
                        </span>
                    </div>
                </div>
            </div>
        </div>
        <div class="header-actions">
            <a href="@Url.Action("Index")" class="btn btn-back">
                <i class="fas fa-arrow-left me-2"></i>Volver a Hábitos
            </a>
        </div>
    </div>

    <!-- Resumen Principal Mejorado -->
    <div class="main-stats-grid">
        <div class="main-stat-card streak-card">
            <div class="card-glow"></div>
            <div class="stat-content">
                <div class="stat-icon">
                    <i class="fas fa-fire"></i>
                </div>
                <div class="stat-info">
                    <span class="stat-value">@Model.CurrentStreak</span>
                    <span class="stat-label">Racha Actual</span>
                    <div class="stat-meta">
                        <span class="stat-emoji">@Model.StreakEmoji</span>
                        <span class="stat-detail">Máx: @Model.LongestStreak días</span>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="main-stat-card success-card">
            <div class="card-glow"></div>
            <div class="stat-content">
                <div class="stat-icon">
                    <i class="fas fa-percentage"></i>
                </div>
                <div class="stat-info">
                    <span class="stat-value">@Model.SuccessRateFormatted</span>
                    <span class="stat-label">Tasa de Éxito</span>
                    <div class="stat-meta">
                        <span class="stat-level">@Model.ConsistencyLevel</span>
                        <div class="consistency-badge @GetConsistencyClass(Model.SuccessRate)">
                            <i class="fas @GetConsistencyIcon(Model.SuccessRate) me-1"></i>
                            @GetConsistencyText(Model.SuccessRate)
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="main-stat-card total-card">
            <div class="card-glow"></div>
            <div class="stat-content">
                <div class="stat-icon">
                    <i class="fas fa-check-circle"></i>
                </div>
                <div class="stat-info">
                    <span class="stat-value">@Model.TotalCompletions</span>
                    <span class="stat-label">Total Completados</span>
                    <div class="stat-meta">
                        <span class="stat-detail">@Model.WeekCompletions esta semana</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Grid de Estadísticas Detalladas Mejorado -->
    <div class="detailed-stats-grid">
        <!-- Estado Actual Mejorado -->
        <div class="stat-section status-section">
            <div class="section-header">
                <h3 class="section-title">
                    <i class="fas fa-calendar-check me-2"></i>
                    Estado Actual
                </h3>
                <div class="section-actions">
                    <span class="status-badge @(Model.TodayCompleted ? "completed" : "pending")">
                        @(Model.TodayCompleted ? "✅ Completado" : "⏳ Pendiente")
                    </span>
                </div>
            </div>
            <div class="status-grid">
                <div class="status-item">
                    <div class="status-icon today">
                        <i class="fas fa-sun"></i>
                    </div>
                    <div class="status-info">
                        <span class="status-value">@(Model.TodayCompleted ? "Completado" : "Pendiente")</span>
                        <span class="status-label">Hoy</span>
                    </div>
                </div>
                <div class="status-item">
                    <div class="status-icon week">
                        <i class="fas fa-calendar-week"></i>
                    </div>
                    <div class="status-info">
                        <span class="status-value">@Model.WeekCompletions/@Model.Frequency</span>
                        <span class="status-label">Esta Semana</span>
                    </div>
                </div>
                <div class="status-item">
                    <div class="status-icon month">
                        <i class="fas fa-calendar-alt"></i>
                    </div>
                    <div class="status-info">
                        <span class="status-value">@Model.MonthCompletions</span>
                        <span class="status-label">Este Mes</span>
                    </div>
                </div>
                <div class="status-item">
                    <div class="status-icon record">
                        <i class="fas fa-trophy"></i>
                    </div>
                    <div class="status-info">
                        <span class="status-value">@Model.LongestStreak días</span>
                        <span class="status-label">Récord Personal</span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Métricas de Rendimiento Mejoradas -->
        <div class="stat-section performance-section">
            <div class="section-header">
                <h3 class="section-title">
                    <i class="fas fa-chart-line me-2"></i>
                    Rendimiento
                </h3>
            </div>
            <div class="performance-stats">
                <div class="performance-stat">
                    <div class="performance-header">
                        <span class="performance-label">Progreso Semanal</span>
                        <span class="performance-value">@Model.WeekCompletions/@Model.Frequency</span>
                    </div>
                    <div class="performance-bar">
                        <div class="performance-fill" style="width: @(Math.Min(Model.WeekCompletions * 100 / Model.Frequency, 100))%">
                            <div class="performance-glow"></div>
                        </div>
                    </div>
                    <span class="performance-target">Meta: @Model.Frequency/semana</span>
                </div>
                
                <div class="performance-stat">
                    <div class="performance-metric">
                        <div class="metric-icon best-day">
                            <i class="fas fa-calendar-star"></i>
                        </div>
                        <div class="metric-info">
                            <span class="metric-label">Día Más Productivo</span>
                            <span class="metric-value">@Model.BestDayOfWeek</span>
                        </div>
                    </div>
                </div>
                
                <div class="performance-stat">
                    <div class="performance-metric">
                        <div class="metric-icon best-month">
                            <i class="fas fa-chart-bar"></i>
                        </div>
                        <div class="metric-info">
                            <span class="metric-label">Mes Más Productivo</span>
                            <span class="metric-value">@Model.MostProductiveMonth</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Patrón Semanal Mejorado con Barras Horizontales -->
        <div class="stat-section pattern-section">
            <div class="section-header">
                <h3 class="section-title">
                    <i class="fas fa-calendar-week me-2"></i>
                    Patrón Semanal
                </h3>
                <div class="section-actions">
                    <span class="pattern-summary">Total: @Model.DailyCompletionPattern.Values.Sum()</span>
                </div>
            </div>
            <div class="weekly-pattern-horizontal">
                @{
                    var maxDaily = Model.DailyCompletionPattern.Values.Max();
                    // CORREGIDO: Usar nombres en español que vienen del backend
                    var dayNames = new Dictionary<string, string>
                    {
                        ["Lunes"] = "Lun",
                        ["Martes"] = "Mar", 
                        ["Miércoles"] = "Mié",
                        ["Jueves"] = "Jue",
                        ["Viernes"] = "Vie",
                        ["Sábado"] = "Sáb",
                        ["Domingo"] = "Dom"
                    };
                }
                @foreach (var day in Model.DailyCompletionPattern)
                {
                    var percentage = maxDaily > 0 ? (day.Value * 100.0) / maxDaily : 0;
                    var dayKey = day.Key;
                    var shortName = dayNames.ContainsKey(dayKey) ? dayNames[dayKey] : dayKey.Substring(0, 3);
                    
                    <div class="day-stat-horizontal">
                        <div class="day-info">
                            <span class="day-name">@shortName</span>
                            <span class="day-count">@day.Value</span>
                        </div>
                        <div class="day-bar-horizontal">
                            <div class="day-fill-horizontal" style="width: @percentage%">
                                <div class="day-glow"></div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>

        <!-- Insights y Recomendaciones Mejorados -->
        <div class="stat-section insights-section">
            <div class="section-header">
                <h3 class="section-title">
                    <i class="fas fa-lightbulb me-2"></i>
                    Análisis y Recomendaciones
                </h3>
            </div>
            <div class="insights-list">
                @foreach (var insight in Model.Insights.Take(3))
                {
                    <div class="insight-item">
                        <div class="insight-icon">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <div class="insight-content">
                            <p>@insight</p>
                        </div>
                    </div>
                }
                @if (Model.Insights.Count > 3)
                {
                    <div class="insights-more">
                        <span>+@(Model.Insights.Count - 3) recomendaciones más</span>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Gráficos Mejorados -->
    <div class="charts-section">
        <div class="section-header">
            <h3 class="section-title main-title">
                <i class="fas fa-chart-line me-2"></i>
                Evolución Temporal
            </h3>
            <div class="chart-actions">
                <button class="chart-btn active" data-chart="weekly">12 Semanas</button>
                <button class="chart-btn" data-chart="monthly">6 Meses</button>
            </div>
        </div>
        <div class="charts-grid">
            <div class="chart-container">
                <div class="chart-header">
                    <h4 class="chart-title">Tendencia Semanal</h4>
                    <span class="chart-subtitle">Últimas 12 semanas</span>
                </div>
                <div class="chart-wrapper">
                    <canvas id="weeklyChart"></canvas>
                </div>
            </div>
            
            <div class="chart-container">
                <div class="chart-header">
                    <h4 class="chart-title">Progreso Mensual</h4>
                    <span class="chart-subtitle">Últimos 6 meses</span>
                </div>
                <div class="chart-wrapper">
                    <canvas id="monthlyChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Resumen de Logros -->
    <div class="achievements-section">
        <div class="section-header">
            <h3 class="section-title">
                <i class="fas fa-award me-2"></i>
                Logros Destacados
            </h3>
        </div>
        <div class="achievements-grid">
            @if (Model.LongestStreak >= 7)
            {
                <div class="achievement-card">
                    <div class="achievement-icon streak">
                        <i class="fas fa-fire"></i>
                    </div>
                    <div class="achievement-content">
                        <h4>Racha de @Model.LongestStreak días</h4>
                        <p>Tu período más consistente hasta ahora</p>
                    </div>
                </div>
            }
            
            @if (Model.SuccessRate >= 80)
            {
                <div class="achievement-card">
                    <div class="achievement-icon success">
                        <i class="fas fa-trophy"></i>
                    </div>
                    <div class="achievement-content">
                        <h4>@Model.SuccessRateFormatted de Éxito</h4>
                        <p>Excelente nivel de consistencia</p>
                    </div>
                </div>
            }
            
            @if (Model.TotalCompletions >= 50)
            {
                <div class="achievement-card">
                    <div class="achievement-icon milestone">
                        <i class="fas fa-flag-checkered"></i>
                    </div>
                    <div class="achievement-content">
                        <h4>@Model.TotalCompletions Completados</h4>
                        <p>Gran marca alcanzada</p>
                    </div>
                </div>
            }
            
            <div class="achievement-card">
                <div class="achievement-icon progress">
                    <i class="fas fa-seedling"></i>
                </div>
                <div class="achievement-content">
                    <h4>En progreso</h4>
                    <p>Sigue construyendo tu hábito día a día</p>
                </div>
            </div>
        </div>
    </div>
</div>

